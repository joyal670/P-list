<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_color"
    tools:context=".start_up.splash.SplashActivity">

    <ImageView
        android:id="@+id/ivHeart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="186dp"
        android:layout_marginTop="209dp"
        android:padding="@dimen/dimen_26dp"
        android:src="@drawable/cardiogram"
        android:layout_height="186dp"
        android:background="@drawable/white_circle_shape"/>

    <TextView
        android:layout_marginTop="@dimen/dimen_74dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivHeart"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_marginStart="40dp"
        android:textAlignment="center"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        android:text="@string/splash_content"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
