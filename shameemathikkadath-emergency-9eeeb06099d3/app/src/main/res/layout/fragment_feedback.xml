<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivFeedback"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_feedback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/ivFeedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/dimen_33dp"
        android:textSize="@dimen/text_size_24sp"
        android:text="@string/feedback_title"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/edit_text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvDec"
        android:layout_marginTop="@dimen/margin_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:alpha="0.6"
        android:layout_marginStart="@dimen/dimen_26dp"
        android:layout_marginEnd="@dimen/dimen_26dp"
        android:textSize="@dimen/text_size_16sp"
        android:text="@string/dec_content"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/edit_text_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RatingBar
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvDec"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:stepSize="5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:progressBackgroundTint="@color/star_color"
        android:isIndicator="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>
