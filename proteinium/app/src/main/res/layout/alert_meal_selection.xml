<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_16dp"
    android:background="@color/white"
    android:padding="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivMealSelectionClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_gravity="end"/>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="@dimen/margin_250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/the_selected_meal_includes_egg_that_you_dislike_would_you_like_to_add_it"
        android:textColor="@color/light_black1"
        android:gravity="center"
        android:fontFamily="@font/segoe_ui"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textSize="@dimen/text_size_16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MealSelectionYesBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55dp"
            app:strokeColor="@color/black"
            android:textAllCaps="false"
            android:text="@string/ok"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/segoe_ui"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            app:cornerRadius="@dimen/margin_24dp"
            android:textColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/MealSelectionNoBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_55dp"
            app:strokeColor="@color/black"
            android:textAllCaps="false"
            android:text="@string/cancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/segoe_ui"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            app:cornerRadius="@dimen/margin_24dp"
            android:textColor="@color/light_black1"/>

    </LinearLayout>




</LinearLayout>