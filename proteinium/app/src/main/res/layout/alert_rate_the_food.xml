<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRatetheFoodClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_gravity="end"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rate_the_food"
                android:textColor="@color/light_black1"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_16sp"/>

            <com.willy.ratingbar.ScaleRatingBar
                android:id="@+id/rtRatetheFoodRatingBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:rb_click_rating="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_gravity="center"
                app:srb_drawableEmpty="@drawable/empty"
                app:srb_drawableFilled="@drawable/fill"
                app:srb_stepSize="1"
                app:srb_numStars="5"
                app:srb_scrollable="false"
                app:srb_starHeight="@dimen/margin_40dp"
                app:srb_starPadding="2dp"
                app:srb_starWidth="@dimen/margin_40dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/RatetheFoodSubmitBtn"
                android:layout_width="@dimen/margin_170dp"
                android:layout_height="@dimen/margin_55dp"
                app:strokeColor="@color/black"
                android:textAllCaps="false"
                android:text="@string/submit"
                android:textSize="@dimen/text_size_14sp"
                android:fontFamily="@font/segoe_ui"
                android:layout_gravity="center"
                android:gravity="center"
                app:cornerRadius="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:textColor="@color/white"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>