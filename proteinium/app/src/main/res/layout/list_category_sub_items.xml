<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_8dp"
    android:layout_marginBottom="@dimen/margin_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivDishPlate"
        android:src="@drawable/ic_dish_plate"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_20dp"/>
    <TextView
        android:id="@+id/tvCategoryItemTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tvCategoryItemTitle1"
        android:fontFamily="@font/segoe_ui"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDishPlate"
        app:layout_constraintTop_toTopOf="@+id/ivDishPlate"
        app:layout_constraintStart_toEndOf="@+id/ivDishPlate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
    <TextView
        android:id="@+id/tvCategoryItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tvCategoryItems"
        android:fontFamily="@font/segoe_ui"
        android:textSize="@dimen/text_size_12sp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:textAllCaps="false"
        android:textColor="@color/color_main"
        android:gravity="start"
        android:layout_marginEnd="@dimen/margin_8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCategoryItemTitle1"
        app:layout_constraintStart_toEndOf="@+id/ivDishPlate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>