<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRemoveItemClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_gravity="end"/>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="@dimen/margin_250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/please_remove_an_item_from_your_selections"
                android:textColor="@color/light_black1"
                android:gravity="center"
                android:fontFamily="@font/segoe_ui"
                android:lineSpacingExtra="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/RemoveItemOkBtn"
                android:layout_width="@dimen/margin_100dp"
                android:layout_height="@dimen/margin_55dp"
                app:strokeColor="@color/black"
                android:textAllCaps="false"
                android:text="@string/ok"
                android:textSize="@dimen/text_size_14sp"
                android:fontFamily="@font/segoe_ui"
                android:layout_gravity="center"
                android:gravity="center"
                app:cornerRadius="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>