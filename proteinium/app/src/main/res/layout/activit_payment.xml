<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_16dp"
        android:gravity="center_horizontal">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/please_enter_payment_amount"
            android:ems="10"
            android:id="@+id/amountTitle" android:layout_margin="5dp" android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
            />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:ems="10"
            android:id="@+id/etAmount"
            tools:text="0.100"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/amount"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/please_select_payment_method"
            android:ems="10"
            android:id="@+id/methodTitle" android:layout_margin="5dp" android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="5dp"
           />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mf"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/knet"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/knet"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/md"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/b"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/b"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/mpgs"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vm"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/np"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/uaecc"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/ae"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/ae"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

        <ImageView
            android:id="@+id/sadad"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/sadad"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_8"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_16dp"/>

</LinearLayout>