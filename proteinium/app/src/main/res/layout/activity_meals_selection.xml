<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_main"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_sub"/>
        <include layout="@layout/no_subscrption"
            android:id="@+id/noMenu"
            android:visibility="gone"/>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mailLayout"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/border_rounded_top_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delivery_date"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui_semibold"/>

            <TextView
                android:id="@+id/tvmealsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_11_02_2021"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/segoe_ui"/>

        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/meals_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            android:theme="@style/ToolbarTheme"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/grey2"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            app:tabIndicatorHeight="@dimen/margin_3dp"
            app:tabIndicatorFullWidth="true"
            app:tabSelectedTextColor="@color/black"
            app:tabTextColor="@color/grey2" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/meals_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tabs"
            />


    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#F5F5F5"
        android:background="#F5F5F5">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="#F5F5F5"
            android:padding="@dimen/margin_5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvNutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/segoe_ui_bold"
                android:textSize="@dimen/text_size_12sp"
                android:text="@string/total_nutrition"/>
            <LinearLayout
                android:id="@+id/llNutrition"
                app:layout_constraintTop_toBottomOf="@+id/tvNutrition"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_2dp">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/margin_4dp"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="@dimen/dp1"
                        app:cardCornerRadius="@dimen/margin_10dp"
                        app:strokeColor="#BEBDC2">
                        <LinearLayout
                            android:layout_margin="@dimen/margin_8dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/a2"/>
                            <TextView
                                android:id="@+id/tvGramCarb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_14sp"
                                android:text="65g"/>
                            <TextView
                                android:id="@+id/tvTitleCarb"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_10sp"
                                android:text="@string/proteins"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:strokeWidth="@dimen/dp1"
                        app:cardCornerRadius="@dimen/margin_10dp"
                        app:strokeColor="#BEBDC2">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/a2"/>
                            <TextView
                                android:id="@+id/tvGramProtein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_14sp"
                                android:text="65g"/>
                            <TextView
                                android:id="@+id/tvTitleProtein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_10sp"
                                android:text="@string/carbs"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:strokeWidth="@dimen/dp1"
                        app:strokeColor="#BEBDC2"
                        app:cardCornerRadius="@dimen/margin_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/a2"/>
                            <TextView
                                android:id="@+id/tvGramFat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_14sp"
                                android:text="65g"/>
                            <TextView
                                android:id="@+id/tvTitleCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_10sp"
                                android:text="@string/fat"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.card.MaterialCardView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        app:cardCornerRadius="@dimen/margin_10dp"
                        app:strokeWidth="@dimen/dp1"
                        app:strokeColor="#BEBDC2"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_margin="@dimen/margin_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/a2"/>
                            <TextView
                                android:id="@+id/tvGramCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_14sp"
                                android:text="65g"/>
                            <TextView
                                android:id="@+id/tvTitleFat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:fontFamily="@font/segoe_ui_bold"
                                android:textSize="@dimen/text_size_10sp"
                                android:text="@string/calories"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSelected"
                app:layout_constraintTop_toBottomOf="@+id/llNutrition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_meal"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/segoe_ui_semibold"/>
                <TextView
                    android:id="@+id/tvSelected"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selected_meal"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/segoe_ui_semibold"/>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                app:layout_constraintTop_toBottomOf="@+id/llNutrition"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/margin_120dp"
                android:layout_height="@dimen/margin_55dp"
                android:text="@string/save"
                android:textSize="@dimen/text_size_14sp"
                android:fontFamily="@font/segoe_ui_semibold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:gravity="center"
                app:cornerRadius="@dimen/margin_24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</LinearLayout>
