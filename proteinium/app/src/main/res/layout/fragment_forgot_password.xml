<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivBack"
        android:src="@drawable/ic_arrow_back_toolbar24"
        app:tint="@color/black"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:padding="@dimen/margin_10dp"
        android:clickable="true"
        android:background="?selectableItemBackground"
        />
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvForgotPassword"
        android:gravity="center"
        android:fontFamily="@font/segoe_ui_bold"
        android:textSize="@dimen/text_size_30sp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/tvForgotPasswordDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:fontFamily="@font/segoe_ui"
        android:text="@string/tvForgotPasswordDes"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_15sp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/tvEmail"
        android:fontFamily="@font/segoe_ui"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_14sp"
        android:inputType="textEmailAddress"
        android:textColor="@color/light_black"
        android:background="@drawable/border_rounded_light_white"
        android:layout_marginTop="@dimen/margin_20dp"
        android:paddingStart="40dp"
        android:layout_marginStart="@dimen/margin_34dp"
        android:layout_marginEnd="@dimen/margin_34dp"
        tools:ignore="RtlCompat"
        android:textAlignment="viewStart"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:fontFamily="@font/segoe_ui_semibold"
        android:text="@string/btnSend"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        app:backgroundTint="@color/color_main"
        app:cornerRadius="@dimen/radius_24dp"
        android:layout_marginStart="@dimen/margin_34dp"
        android:layout_marginEnd="@dimen/margin_34dp"
        app:strokeColor="@color/color_main"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20dp"/>
</LinearLayout>