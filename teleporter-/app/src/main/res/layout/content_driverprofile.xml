<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ashtechlabs.teleporter.ui.dashboard.courier_dashboard.UpdateRateDriverActivity"
    tools:showIn="@layout/activity_driverprofile">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:fillViewport="true"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <LinearLayout
            style="@style/RoundedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/register1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:layout_marginStart="@dimen/padding"
                    android:text="I Drive"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <RelativeLayout
                    android:id="@+id/spr_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/rounded_edit_text_corner_radius"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:id="@+id/vehicle_type"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawablePadding="@dimen/padding_normal"
                        android:drawableStart="@drawable/ic_trucks"
                        android:gravity="center_vertical"
                        android:hint="Select" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City of Work"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <AutoCompleteTextView
                        android:id="@+id/editCity"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your City of Work"
                        android:padding="7dp">

                        <requestFocus />
                    </AutoCompleteTextView>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editName"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="Enter Name" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Address"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editCompanyAddress"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="Enter Company Address" />
                </LinearLayout>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editPhone"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:imeOptions="actionNext"
                        android:hint="Enter Phone" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editEmail"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:hint="Enter Email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/EditText03"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="City"
                        android:padding="7dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Zip Code"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editZipCode"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter Zip Code"
                        android:imeOptions="actionNext"
                        android:inputType="number" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/TextView121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_small"
                        android:text="Profile Image"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" />

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/TextView06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/spacing_small"
                        android:text="License Plate"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" />

                    <ImageView
                        android:id="@+id/img_license"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <com.ashtechlabs.teleporter.custom_views.CustomFontView
                    android:id="@+id/fdg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:text="License Expiry Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/font_normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid date for license"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.ashtechlabs.teleporter.custom_views.CustomFontView
                            android:id="@+id/txtLicenseExpiredate"
                            style="@style/RoundedEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_normal"
                            android:hint="Select" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/rounded_edit_text_corner_radius"
                            android:src="@drawable/ic_add" />

                    </RelativeLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number"
                    android:layout_marginStart="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edit_vehicle_num"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:imeOptions="actionNext"
                        android:hint="Enter Vehicle number" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/TextView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Insurance"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_normal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" />

                    <ImageView
                        android:id="@+id/img_insurance"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small" />

                <com.ashtechlabs.teleporter.custom_views.CustomFontView
                    android:id="@+id/fdgdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:text="Insurance Expiry Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/font_normal" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:gravity="center_vertical">

                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/txtInsuranceExpireDate"
                        style="@style/RoundedEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_normal"
                        android:hint="Valid date for insurance"
                        android:paddingEnd="@dimen/rounded_edit_text_padding_end" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="@dimen/rounded_edit_text_corner_radius"
                        android:src="@drawable/ic_add" />

                </RelativeLayout>

            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_small" />

            <Button
                android:id="@+id/btnSubmit"
                style="@style/RoundedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_normal"
                android:text="@string/update"
                android:textAllCaps="true" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>