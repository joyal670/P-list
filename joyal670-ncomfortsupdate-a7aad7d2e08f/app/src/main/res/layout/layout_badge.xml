<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/margin_12dp"
        android:gravity="center"
        android:text="@string/enquiry"
        android:fontFamily="@font/heebo_regular"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13sp"
        app:drawableStartCompat="@drawable/ic_message_gold"
        app:drawableTint="@color/faded_gold" />

    <LinearLayout
        android:id="@+id/mainBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_6dp"
        android:visibility="gone"
        android:background="@drawable/badge_background"
        android:gravity="center">

        <TextView
            android:id="@+id/badgetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_9sp" />

    </LinearLayout>

</LinearLayout>