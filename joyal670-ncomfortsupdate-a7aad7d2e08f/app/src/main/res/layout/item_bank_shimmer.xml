<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:background="@color/colorGrey"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAccountName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:background="@color/colorGrey"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:background="@color/colorGrey"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvIFSCCode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:background="@color/colorGrey"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvBankName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:background="@color/colorGrey"
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvBranchName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:fontFamily="@font/heebo_regular"
                    android:gravity="start"
                    android:text=""
                    android:textColor="@color/text_dark_grey"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editAccountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_color"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/removeAccountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_14dp"
                    android:backgroundTint="@color/text_light_grey"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/remove"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/shareAccountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorGrey"
                    android:fontFamily="@font/heebo_medium"
                    android:text=""
                    app:iconGravity="start"
                    app:iconTint="@color/white"
                    app:iconPadding="@dimen/margin_15dp"
                    android:visibility="visible"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_5dp"
            android:background="@drawable/custom_card_shadow" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>