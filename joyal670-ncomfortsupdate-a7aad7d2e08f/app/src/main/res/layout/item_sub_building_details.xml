<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/margin_6dp"
    app:cardElevation="@dimen/margin_6dp"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:layout_marginStart="@dimen/margin_5dp"
    android:layout_marginEnd="@dimen/margin_5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBuildingImage"
            android:layout_width="100dp"
            android:layout_height="@dimen/margin_80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3dp"
            android:fontFamily="@font/heebo_medium"
            android:gravity="center"
            android:text="P name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tvPropertyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_medium"
            android:gravity="center"
            android:text="Vacant / Rent"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_25dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginTop="@dimen/margin_3dp"
            android:background="@drawable/bubble_receive"
            android:gravity="center">

            <TextView
                android:id="@+id/tvBuildingType"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_30dp"
                android:fontFamily="@font/heebo_medium"
                android:gravity="center"
                android:paddingStart="@dimen/margin_16dp"
                android:paddingTop="@dimen/margin_8dp"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_8dp"
                android:text="Rooms"
                android:textColor="@color/color_accent_grey"
                android:textSize="@dimen/text_size_10sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:background="@color/color_accent_grey_light_new2" />

</com.google.android.material.card.MaterialCardView>