<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSub"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:contentInsetStart="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <TextView
                android:id="@+id/tvSubToolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Add Address"
                android:textColor="@color/white"
                android:fontFamily="@font/segoe_ui"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_16sp"/>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_rounded_top_white"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_80dp"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_25dp"
                    android:layout_marginEnd="@dimen/margin_30dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/add_delivery_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                        android:focusable="false"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/governorate"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/etArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                        android:focusable="false"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/area"
                        android:inputType="textMultiLine"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/etBlock"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/block"
                        android:inputType="text"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/et_street"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/street"
                        android:inputType="text"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/et_avenue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/avenue"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />


                    <EditText
                        android:id="@+id/et_building"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/building"
                        android:inputType="text"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/et_floor"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/floor"
                        android:inputType="number"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <EditText
                        android:id="@+id/et_appartment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:fontFamily="@font/segoe_ui"
                        android:gravity="start"
                        android:hint="@string/appartment"
                        android:inputType="text"
                        android:textAlignment="viewStart"
                        android:textSize="@dimen/text_size_14sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDefaultAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:checked="true"
                        android:fontFamily="@font/segoe_ui"
                        android:text="@string/switchMaterial"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:fontFamily="@font/segoe_ui_semibold"
                android:gravity="center"
                android:text="@string/tvsubmit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:cornerRadius="@dimen/margin_24dp"
                app:strokeColor="@color/black" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>