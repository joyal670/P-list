<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_5dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_7dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvQuesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/dove_gray"
                    android:fontFamily="@font/barlow_semibold"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvques"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/textView_dark"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/barlow_medium"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/silver"/>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_15dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvQuesMark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/question_mark_2"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/barlow_medium"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvQuesMarkResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mark_1"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/dove_gray"
                    android:fontFamily="@font/barlow_medium"/>

            </LinearLayout>



        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/questBtn"
        android:layout_width="@dimen/margin_130dp"
        android:layout_height="@dimen/margin_50dp"
        android:elevation="@dimen/margin_5dp"
        android:layout_marginTop="-25dp"
        android:text="@string/view_q_amp_a"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        android:textAllCaps="false"
        android:fontFamily="@font/barlow_medium"
        app:backgroundTint="@color/comet"
        android:layout_gravity="center|bottom" />


</LinearLayout>