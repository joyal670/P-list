<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <EditText
        android:id="@+id/EtCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:background="@drawable/edit_text_boarder"
        android:fontFamily="@font/heebo_regular"
        android:hint="@string/enter_current_password"
        android:maxLines="1"
        android:gravity="start|center"
        android:inputType="text"
        android:paddingStart="@dimen/margin_15dp"
        android:paddingEnd="@dimen/margin_15dp"
        android:textColor="@color/text_dark_grey"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EtNewPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:textAlignment="viewStart"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:background="@drawable/edit_text_boarder"
        android:fontFamily="@font/heebo_regular"
        android:hint="@string/enter_new_password"
        android:inputType="textPassword"
        android:gravity="start|center"
        android:maxLines="1"
        android:paddingStart="@dimen/margin_15dp"
        android:paddingEnd="@dimen/margin_15dp"
        android:textColor="@color/text_dark_grey"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EtCurrentPassword" />

    <EditText
        android:id="@+id/EtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_30dp"
        android:textAlignment="viewStart"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:background="@drawable/edit_text_boarder"
        android:fontFamily="@font/heebo_regular"
        android:hint="@string/enter_confirm_password"
        android:inputType="textPassword"
        android:gravity="start|center"
        android:maxLines="1"
        android:paddingStart="@dimen/margin_15dp"
        android:paddingEnd="@dimen/margin_15dp"
        android:textColor="@color/text_dark_grey"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EtNewPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_60dp"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_35dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:backgroundTint="@color/primary_color"
        android:fontFamily="@font/heebo_medium"
        android:text="@string/change_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp"
        app:cornerRadius="@dimen/margin_7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EtConfirmPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>