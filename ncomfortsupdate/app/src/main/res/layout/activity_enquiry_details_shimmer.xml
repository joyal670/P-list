<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_main" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tool">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_20dp"
                        app:cardCornerRadius="@dimen/margin_5dp"
                        app:cardElevation="@dimen/margin_10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_20dp">

                            <ImageView
                                android:layout_width="126dp"
                                android:layout_height="90dp"
                                android:background="@color/colorGrey"
                                android:scaleType="centerCrop"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_15dp"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/imageView3"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:maxLines="1"
                                    android:textColor="@color/text_dark_grey"
                                    android:textSize="@dimen/text_size_16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:maxLines="3"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_14sp" />

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:maxLines="3"
                                    android:textColor="@color/burnt_sienna"
                                    android:textSize="@dimen/text_size_13sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginEnd="@dimen/margin_20dp"
                        android:background="@color/seperator_light" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_20dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/margin_44dp"
                            android:layout_height="@dimen/margin_44dp"
                            android:background="@color/colorGrey" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center"
                                    android:layout_weight="1"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_14sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="@dimen/margin_30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="@dimen/margin_20dp"
                                    android:layout_marginEnd="@dimen/margin_20dp"
                                    android:background="@color/colorGrey"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="@dimen/margin_5dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_13sp" />

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="@dimen/margin_100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_10dp"
                                    android:layout_marginEnd="@dimen/margin_10dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textAlignment="viewStart"
                                    android:textColor="@color/text_dark_grey"
                                    android:textSize="@dimen/text_size_13sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="@dimen/margin_100dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_13sp" />

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="@dimen/margin_80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_10dp"
                                    android:layout_marginEnd="@dimen/margin_10dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_dark_grey"
                                    android:textSize="@dimen/text_size_13sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="@dimen/margin_60dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_13sp" />

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_10dp"
                                    android:layout_marginEnd="@dimen/margin_10dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_dark_grey"
                                    android:textSize="@dimen/text_size_13sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="@dimen/margin_150dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_13sp" />

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_10dp"
                                    android:layout_marginEnd="@dimen/margin_10dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_dark_grey"
                                    android:textSize="@dimen/text_size_13sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_8dp"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/text_light_grey"
                                    android:textSize="@dimen/text_size_13sp" />

                                <com.google.android.material.textview.MaterialTextView

                                    android:layout_width="@dimen/margin_150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_10dp"
                                    android:layout_marginEnd="@dimen/margin_10dp"
                                    android:background="@color/colorGrey"
                                    android:fontFamily="@font/heebo_regular"
                                    android:gravity="start"
                                    android:textColor="@color/burnt_sienna"
                                    android:textSize="@dimen/text_size_13sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20dp"
                                android:fontFamily="@font/heebo_regular"
                                android:gravity="start"
                                android:text="@string/message"
                                android:textColor="@color/text_light_grey"
                                android:textSize="@dimen/text_size_13sp"
                                android:visibility="gone" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10dp"
                                android:fontFamily="@font/heebo_regular"
                                android:gravity="start"
                                android:text="@string/dumy_message"
                                android:textColor="@color/text_dark_grey"
                                android:textSize="@dimen/text_size_13sp"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/margin_20dp"
                        android:background="@color/seperator_light" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>