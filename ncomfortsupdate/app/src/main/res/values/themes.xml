<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NComfortsAgent.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_color</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="Theme.NComfortMaterial.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_color</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:actionMenuTextColor">@color/black</item>
    </style>

    <style name="Theme.NComfortMaterial.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/heebo_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    <item name="android:fontFamily">@font/heebo_medium</item>
    </style>

    <style name="Theme.NComfort.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NComfort.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="maxLines">1</item>
        <item name="iconTint">@color/faded_gold</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/faded_gold</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Shopping.BottomSheetDialog</item>
    </style>

    <style name="Shopping.BottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="custom_material_theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/heebo_medium</item>
    </style>

    <style name="customDialog" >
        <item name="android:statusBarColor">@color/secondary_color</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>