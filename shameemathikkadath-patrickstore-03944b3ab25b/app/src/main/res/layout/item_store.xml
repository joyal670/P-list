<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBg"
    android:orientation="vertical"
    android:visibility="gone"
    android:padding="@dimen/padding_normal">

    <ImageView
        android:id="@+id/imgStore"
        android:layout_width="@dimen/image_height"
        android:layout_height="@dimen/image_width"
        android:contentDescription="@null"
        android:src="@drawable/dummy_shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/dummy_shop_name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_normal"
        app:fontFamily="@font/barlow_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgStore"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShopAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_address"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgStore"
        app:layout_constraintTop_toBottomOf="@+id/tvShopName"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
