<com.google.android.material.card.MaterialCardView android:layout_weight="1"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_normal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium">
        <TextView
            android:id="@+id/tvSellerPrice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:fontFamily="@font/barlow_regular"
            android:textSize="@dimen/text_size_10sp"
            android:text="@string/seller_price"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvSellerPrice"
            app:layout_constraintEnd_toEndOf="@+id/tvSellerPrice"
            app:layout_constraintStart_toStartOf="@+id/tvSellerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_bold"
            android:textSize="@dimen/text_size_normal"
            android:text="@string/dummy_price"
            android:textColor="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
