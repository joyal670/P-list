<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="2000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ivBottomImage"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/constraintLogout"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationX="2"
            android:alpha=".2" />
        <Constraint
            android:id="@+id/btnGetStart"
            motion:layout_constraintEnd_toEndOf="@+id/ivBottomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/ivBottomImage"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:alpha=".2" />
        <Constraint
            android:id="@+id/textView38"
            motion:layout_constraintEnd_toEndOf="@+id/tvSellerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/tvSellerText"
            motion:layout_constraintStart_toStartOf="@+id/tvSellerText"
            android:alpha=".2" />
        <Constraint
            android:id="@+id/tvSellerText"
            motion:layout_constraintEnd_toEndOf="@+id/btnGetStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toTopOf="@+id/btnGetStart"
            motion:layout_constraintStart_toStartOf="@+id/btnGetStart"
            android:alpha=".2" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ivBottomImage"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/constraintLogout"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/btnGetStart"
            motion:layout_constraintEnd_toEndOf="@+id/ivBottomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/ivBottomImage"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:alpha="1" />
        <Constraint
            android:id="@+id/textView38"
            motion:layout_constraintEnd_toEndOf="@+id/tvSellerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/tvSellerText"
            motion:layout_constraintStart_toStartOf="@+id/tvSellerText"
            android:alpha="1" />
        <Constraint
            android:id="@+id/tvSellerText"
            motion:layout_constraintEnd_toEndOf="@+id/btnGetStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            motion:layout_constraintBottom_toTopOf="@+id/btnGetStart"
            motion:layout_constraintStart_toStartOf="@+id/btnGetStart"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>