<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/athens_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/athens_gray"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_7dp"
        android:layout_marginEnd="@dimen/margin_7dp"
        android:weightSum="2">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvClass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginStart="@dimen/margin_18dp"
            android:layout_gravity="center"
            android:text="@string/class_4_a"
            android:textColor="@color/textView_grey"
            android:textSize="@dimen/text_size_13sp"
            android:fontFamily="@font/barlow_regular"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAcadamicYear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:text="@string/academic_year_2020_2021"
            android:textColor="@color/textView_grey"
            android:textSize="@dimen/text_size_13sp"
            android:fontFamily="@font/barlow_regular"/>


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCatagoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_testing"
                    android:textSize="@dimen/text_size_13sp"
                    android:textColor="@color/textView_grey"
                    android:gravity="start"
                    android:fontFamily="@font/barlow_bold"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_name"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/textView_grey"
                    android:layout_gravity="start"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:fontFamily="@font/barlow_regular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deadline_2021_04_10"
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/textView_grey"
                        android:gravity="start"
                        android:fontFamily="@font/barlow_bold"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvDeadLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_2021_04_10"
                        android:textSize="@dimen/text_size_13sp"
                        android:textColor="@color/pomegranate"
                        android:gravity="start"
                        android:layout_marginStart="@dimen/margin_2dp"
                        android:layout_marginEnd="@dimen/margin_2dp"
                        android:fontFamily="@font/barlow_semibold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/textView_grey"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:fontFamily="@font/barlow_regular"/>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/maths"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dove_gray"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:fontFamily="@font/barlow_regular"/>

                </LinearLayout>



            </LinearLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/attachmentBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_45dp"
                android:gravity="center"
                android:text="@string/attachment_png"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/textView_grey"
                app:strokeWidth="@dimen/margin_1dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:textColor="@color/textView_dark"
                app:icon="@drawable/ic_attachment"
                android:paddingStart="@dimen/margin_10dp"
                app:iconPadding="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginTop="@dimen/margin_3dp"
                android:fontFamily="@font/barlow_regular"/>

            <com.prongbang.eptv.ExpandableTextView
                android:id="@+id/tvStudentDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/textView_grey"
                app:collapsedMaxLines="2"
                app:autoDuration="true"
                android:layout_marginTop="@dimen/margin_7dp"
                app:duration="200"
                android:layout_marginStart="@dimen/margin_7dp"
                android:layout_marginEnd="@dimen/margin_7dp"
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since" />



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvStudentMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/more"
                android:textSize="@dimen/text_size_14sp"
                android:background="?selectableItemBackground"
                android:textColor="@color/dove_gray"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/margin_7dp"
                android:layout_marginEnd="@dimen/margin_7dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_3dp"
                android:fontFamily="@font/barlow_bold"/>



        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>