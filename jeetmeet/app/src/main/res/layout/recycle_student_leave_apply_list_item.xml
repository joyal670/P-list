<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/athens_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_7dp"
        android:background="@color/athens_gray"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLeaveDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_weight="1"
            android:fontFamily="@font/barlow_regular"
            android:gravity="start"
            android:text="@string/date_25_05_2021"
            android:textColor="@color/dove_gray"
            android:textSize="@dimen/text_size_13sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="@string/status"
                android:textColor="@color/dove_gray"
                android:textSize="@dimen/text_size_13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/statusBtn"
                android:layout_width="@dimen/margin_90dp"
                android:layout_height="@dimen/margin_37dp"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/pending"
                app:elevation="0dp"
                android:autoSizeTextType="none"
                app:autoSizeTextType="none"
                android:ellipsize="end"
                android:autoText="true"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10sp"
                android:clickable="false"
                app:backgroundTint="@color/flush_orange" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:gravity="start"
                        android:text="@string/applicat_name"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_13sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:fontFamily="@font/barlow_bold"
                        android:text="@string/lithin_k_m"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:layout_weight=".004"
                    android:background="@color/dorado" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:gravity="start"
                        android:text="@string/category"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_13sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvCatagoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:fontFamily="@font/barlow_bold"
                        android:text="@string/annuel"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:gravity="start"
                        android:text="@string/schedule"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_13sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_24dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="@font/barlow_bold"
                        android:text="@string/sat_mar_2021_mon_mar_2021"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:layout_weight=".004"
                    android:background="@color/dorado" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/barlow_regular"
                        android:gravity="start"
                        android:text="@string/days"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_13sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvNoOfDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_3dp"
                        android:fontFamily="@font/barlow_bold"
                        android:gravity="start"
                        android:text="@string/_02"
                        android:textColor="@color/dove_gray"
                        android:textSize="@dimen/text_size_14sp" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:gravity="start"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingTop="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:text="@string/reson"
                android:textColor="@color/dove_gray"
                android:textSize="@dimen/text_size_13sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/margin_3dp"
                android:fontFamily="@font/barlow_bold"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since"
                android:textColor="@color/dove_gray"
                android:textSize="@dimen/text_size_14sp" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="start"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingTop="@dimen/margin_10dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:text="@string/attachment"
                android:textColor="@color/dove_gray"
                android:textSize="@dimen/text_size_13sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/attachmentBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_40dp"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:fontFamily="@font/barlow_regular"
                android:gravity="center"
                android:text="@string/attachment_png"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/dove_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:background="@color/dorado" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editBtn"
                    android:layout_width="@dimen/margin_70dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center"
                    android:text="@string/edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13sp"
                    app:backgroundTint="@color/flush_orange" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteBtn"
                    android:layout_width="@dimen/margin_90dp"
                    android:layout_height="@dimen/margin_40dp"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_13sp"
                    app:backgroundTint="@color/pomegranate" />

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>