<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_2dp"
    android:background="@color/athens_gray"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        app:cardCornerRadius="@dimen/margin_10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_15dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:fontFamily="@font/barlow_semibold"
                    android:gravity="start"
                    android:text="@string/sample_event_title"
                    android:textColor="@color/dove_gray"
                    android:textSize="@dimen/text_size_14sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:layout_marginBottom="@dimen/margin_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="start"
                            android:text="@string/type"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvEventType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="start"
                            android:text="@string/sample_event_type"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="start"
                            android:text="@string/date"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvEventDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="start"
                            android:text="@string/sample_date"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="start"
                            android:text="@string/ex_date"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvEventExpDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="start"
                            android:text="@string/sample_date"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="start"
                            android:text="@string/class_amp_division"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvEventClass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="start"
                            android:text="@string/sample_division"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_7dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="start"
                            android:text="@string/time"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvEventTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="start"
                            android:text="@string/sample_time"
                            android:textColor="@color/dove_gray"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

