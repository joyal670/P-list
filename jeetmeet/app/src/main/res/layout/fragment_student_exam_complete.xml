<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#322F5C"
    tools:context=".ui.main.student_panel.sidemenu.exam.exam_schedule.StudentExamCompleteFragment">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/celebration_lottie" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="@dimen/margin_140dp"
            android:layout_height="@dimen/margin_140dp"
            android:layout_gravity="center"
            android:src="@drawable/sample_profile" />

    </FrameLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/completeButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_70dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:backgroundTint="@color/athens_gray"
        android:fontFamily="@font/barlow_medium"
        android:text="Completed"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/margin_20dp"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout"
        app:layout_constraintStart_toStartOf="@+id/frameLayout"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/total_question"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/completeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/completeButton" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTotalQues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/barlow_medium"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintEnd_toEndOf="@+id/materialTextView6"
        app:layout_constraintStart_toStartOf="@+id/materialTextView6"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView6" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/backToHomeButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="@dimen/margin_160dp"
        android:layout_height="@dimen/margin_60dp"
        android:fontFamily="@font/barlow_medium"
        android:text="Back to Home"
        android:layout_marginBottom="@dimen/margin_56dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/margin_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>