<?xml version="1.0" encoding="utf-8"?>
<com.baoyz.widget.PullRefreshLayout
    android:id="@+id/swipeRefreshLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pomegranate">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/athens_gray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:descendantFocusability="blocksDescendants">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_420dp"
                android:background="@drawable/dashboard_curve"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/sampleCardView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_230dp"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_80dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/margin_25dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStudentProfileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_30dp"
                            android:fontFamily="@font/barlow_semibold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/siobhan_l_seal"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_18sp" />

                        <TextView
                            android:id="@+id/tvStudentProfileRegNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="@string/reg_no_12345"
                            android:textColor="@color/dorado"
                            android:textSize="@dimen/text_size_14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStudentProfileClass"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/barlow_regular"
                                    android:gravity="center"
                                    android:text="@string/class_4"
                                    android:textColor="@color/dorado"
                                    android:textSize="@dimen/text_size_14sp" />

                                <TextView
                                    android:id="@+id/tvStudentProfileRollNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:fontFamily="@font/barlow_regular"
                                    android:gravity="center"
                                    android:text="@string/roll_no_12"
                                    android:textColor="@color/dorado"
                                    android:textSize="@dimen/text_size_14sp" />

                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".004"
                                android:background="@color/dorado" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvStudentProfileDivsion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/barlow_regular"
                                    android:gravity="center"
                                    android:text="@string/division_a"
                                    android:textColor="@color/dorado"
                                    android:textSize="@dimen/text_size_14sp" />

                                <TextView
                                    android:id="@+id/tvStudentProfileDob"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_10dp"
                                    android:fontFamily="@font/barlow_regular"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:text="@string/dob_14_12_2020"
                                    android:textColor="@color/dorado"
                                    android:textSize="@dimen/text_size_14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/imageCard"
                    android:layout_width="@dimen/margin_120dp"
                    android:layout_height="@dimen/margin_120dp"
                    app:cardCornerRadius="@dimen/margin_60dp"
                    app:cardElevation="@dimen/margin_16dp"
                    app:layout_constraintBottom_toTopOf="@+id/sampleCardView"
                    app:layout_constraintEnd_toEndOf="@+id/sampleCardView"
                    app:layout_constraintStart_toStartOf="@+id/sampleCardView"
                    app:layout_constraintTop_toTopOf="@+id/sampleCardView">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile_user" />


                </com.google.android.material.card.MaterialCardView>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivParentPic"
                    android:layout_width="@dimen/margin_60dp"
                    android:layout_height="@dimen/margin_60dp"
                    android:elevation="@dimen/margin_8dp"
                    android:src="@drawable/ic_profile_user"
                    app:civ_border_color="@color/pomegranate"
                    app:civ_border_width="@dimen/margin_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/sampleCardView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sampleCardView" />

                <TextView
                    android:id="@+id/tvParentname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center"
                    android:text="@string/madhu_pk"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivParentPic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:fontFamily="@font/barlow_regular"
                    android:gravity="center"
                    android:text="@string/parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvParentname" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                app:cardCornerRadius="@dimen/margin_20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_20dp"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_20dp"
                            android:layout_height="@dimen/margin_20dp"
                            android:layout_gravity="start"
                            app:srcCompat="@drawable/ic_notification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:fontFamily="@font/barlow_regular"
                            android:gravity="center"
                            android:text="@string/notice"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14sp" />

                    </LinearLayout>


                    <com.todkars.shimmer.ShimmerRecyclerView
                        android:id="@+id/rv_student_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5dp"
                        app:shimmer_recycler_layout="@layout/recycle_student_dashboard_list_item"
                        app:shimmer_recycler_item_count="10"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lvNoData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/margin_20dp"
                        android:visibility="gone"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/no_data_error" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.baoyz.widget.PullRefreshLayout>






