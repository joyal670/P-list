<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/margin_5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDashbordTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/programming_contest"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/mine_shaft"
                android:padding="@dimen/margin_2dp"
                android:textSize="@dimen/text_size_15sp"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDashboardContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/on_20_11_2018_will_held_a_programming_contest_on_the"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/dove_gray"
                android:textSize="@dimen/text_size_14sp"
                android:maxLines="2"
                android:layout_marginTop="@dimen/margin_5dp"
                android:padding="@dimen/margin_2dp"
                android:ellipsize="end"
                android:gravity="start"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_right_grey"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:layout_gravity="center|end"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/sampleView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/silver"/>

</LinearLayout>
