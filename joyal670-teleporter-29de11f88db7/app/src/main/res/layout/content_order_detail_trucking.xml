                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_small"
                                android:text="Street, City area/District, City/Town/Village, Land mark, County, Postal code, Country "
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_small" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/spacing_normal"
                                android:layout_marginTop="@dimen/spacing_normal"
                                android:background="@color/gray_light" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_small" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/rounded_bg_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_larger">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:drawablePadding="@dimen/padding_normal"
                        android:gravity="center_vertical"
                        android:text="@string/payment_mode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_large" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/spacing_normal"
                                android:background="@color/gray_light" />


                            <TextView
                                android:id="@+id/tvPayment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cash on delivery"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_normal" />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_log_ht"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:drawableStart="@drawable/ic_accept"
                    android:text="@string/accept"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light" />

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_log_ht"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:layout_marginStart="@dimen/spacing_large"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:drawableStart="@drawable/ic_cancel"
                    android:text="@string/reject"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
