<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:drawableStart">@drawable/ic_facebook</item>
        <item name="android:text">@string/face_book_login</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoogleLoginButton">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/padding_large</item>
        <item name="android:drawableStart">@drawable/ic_g_plus</item>
        <item name="android:text">@string/g_plus_login</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="FullScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--<item name="android:windowFullscreen">true</item>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentActionBar" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ActivityDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="LoginBackground" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_rounded_login_bag</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:drawablePadding">@dimen/padding_larger</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

    <style name="RoundedEditText">
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:drawablePadding">@dimen/padding_normal</item>
        <item name="android:singleLine">true</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

    <style name="RoundedEditText.Login">
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>


    <style name="RoundedButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="RoundedButtonSmall" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_larger</item>
        <item name="android:paddingEnd">@dimen/padding_larger</item>
    </style>


    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HeadTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/roundedButtonNormal</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/dialog_background</item>
    </style>


    <style name="ZopimChatTheme" parent="AppTheme.NoActionBar" />

</resources>
