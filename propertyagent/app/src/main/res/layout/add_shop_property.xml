            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/swimming_pool"
            android:textColor="@color/color_accent_grey_light_new"
            android:textSize="@dimen/text_size_13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_25dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_property_shop_property_nextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_accent_green"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_property_shop_property_backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:backgroundTint="#E1E1E1"
