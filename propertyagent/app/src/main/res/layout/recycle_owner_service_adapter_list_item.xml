<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/radius_22dp"
    app:cardElevation="@dimen/dp1"
    app:strokeColor="#CACACA"
    app:strokeWidth="@dimen/dp1">

    <LinearLayout
        android:id="@+id/linearMainOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sivServiceImage"
            android:layout_width="@dimen/margin_80dp"
            android:layout_height="@dimen/margin_80dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_electricians"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/heebo_regular"
            android:padding="@dimen/margin_5dp"
            android:text="@string/electricians"
            android:textAlignment="center"
            android:textColor="@color/color_accent_grey_border"
            android:textSize="@dimen/text_size_14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:fontFamily="@font/heebo_regular"
            android:text="@string/choose"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            app:backgroundTint="@color/color_accent_blue_statusbar"
            app:cornerRadius="@dimen/radius_20dp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>