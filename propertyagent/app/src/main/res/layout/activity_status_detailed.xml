<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_main_owner" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F1F1"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearMainOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/order_id"
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:text="@string/full_collen" />

                    <TextView
                        android:id="@+id/tvOrderIdDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/heebo_medium"
                        android:text=""
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/service_name"
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:text="@string/full_collen" />

                    <TextView
                        android:id="@+id/tvServiceNameDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/heebo_medium"
                        android:text=""
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/time"
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:text="@string/full_collen" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvTimeDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/heebo_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_accent_grey_light_new4"
                            android:textSize="@dimen/text_size_13sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/margin_5dp"
                            android:layout_marginTop="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:layout_marginBottom="@dimen/margin_5dp"
                            android:background="@color/color_accent_grey_light_new4" />

                        <TextView
                            android:id="@+id/tvDateDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_accent_grey_light_new4"
                            android:textSize="@dimen/text_size_13sp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_16dp"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/property"
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5dp"
                        android:layout_marginEnd="@dimen/margin_5dp"
                        android:text="@string/full_collen" />

                    <TextView
                        android:id="@+id/tvPropertyNameDetail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/heebo_medium"
                        android:text=""
                        android:textColor="@color/color_accent_grey_light_new4"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@color/color_accent_grey_light_new2" />

                <TextView
                    android:id="@+id/tvStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/Status"
                    android:textColor="@color/color_accent_grey_light_new4"
                    android:textSize="@dimen/text_size_13sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvStatusDetailList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:focusable="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/list_status_timeline_detailed_item" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelRequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginBottom="@dimen/margin_25dp"
                    android:backgroundTint="@color/color_accent_red_button"
                    android:fontFamily="@font/heebo_regular"
                    android:text="@string/cancel_request"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp"
                    app:cornerRadius="@dimen/margin_20dp" />


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>