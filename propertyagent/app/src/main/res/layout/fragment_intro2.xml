<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_30dp">

    <TextView
        android:id="@+id/tvMainTitleTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_60dp"
        android:fontFamily="@font/heebo_extrabold"
        android:text="@string/find_your_dream_home"
        android:textAlignment="center"
        android:textColor="@color/color_accent_grey"
        android:textSize="@dimen/text_size_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubTitleOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:fontFamily="@font/heebo_regular"
        android:gravity="center"
        android:text="@string/getting_your_hands_on_the_perfect_home_is_often_a_dream_for_many_but_with_beybaan_you_can_make_this_dream_a_reality_find_spacious_cozy_and_luxurious_living_spaces_within_your_budget"
        android:textColor="@color/color_accent_grey_light"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMainTitleTwo" />

    <ImageView
        android:layout_width="245dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/slider2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitleOne"
        app:layout_constraintVertical_bias="0.381"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>