<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".owner_panel.ui.main.sidemenu.maintenance.success.ServiceSuccessActivity">

    <include
        layout="@layout/toolbar_main_owner"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:src="@drawable/ic_success_owner"/>

        <TextView
            android:id="@+id/tvSuccessfullText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_bold"
            android:text="@string/request_has_been_sent_successfully"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_20dp"
            android:textSize="@dimen/text_size_16sp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/tvSuccessfullContent"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/will_get_in_touch_shortly"
            android:textColor="@color/color_accent_grey_light_new1"
            android:textSize="@dimen/text_size_16sp"
            android:textAlignment="center"
            android:gravity="center"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/heebo_medium"
            android:text="@string/view_status"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            app:backgroundTint="@color/color_accent_blue_statusbar"
            app:cornerRadius="@dimen/radius_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSuccessfullContent"
            android:layout_marginTop="@dimen/margin_20dp"/>

    </LinearLayout>

</LinearLayout>