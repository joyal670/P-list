<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/margin_70dp"
                    android:layout_height="@dimen/margin_70dp"
                    app:cardCornerRadius="@dimen/margin_10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/ivBuilding"
                        android:layout_width="@dimen/margin_70dp"
                        android:layout_height="@dimen/margin_70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sapmle_building" />

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBuildingName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/building_name"
                        android:textColor="@color/color_accent_grey"
                        android:textSize="@dimen/text_size_14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_medium"
                            android:text="@string/number_of_appartments"
                            android:textColor="@color/color_accent_grey"
                            android:textSize="@dimen/text_size_11sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_5dp"
                            android:layout_marginEnd="@dimen/margin_5dp"
                            android:fontFamily="@font/heebo_bold"
                            android:text="@string/full_collen"
                            android:textColor="@color/color_accent_grey"
                            android:textSize="@dimen/text_size_13sp" />

                        <TextView
                            android:id="@+id/tvBuildingNoOfApartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/heebo_bold"
                            android:text="@string/_10"
                            android:textColor="@color/color_accent_grey"
                            android:textSize="@dimen/text_size_11sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:fontFamily="@font/heebo_medium"
                                android:text="@string/occupied"
                                android:textColor="@color/color_accent_green"
                                android:textSize="@dimen/text_size_11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:layout_marginEnd="@dimen/margin_5dp"
                                android:fontFamily="@font/heebo_bold"
                                android:text="@string/full_collen"
                                android:textColor="@color/color_accent_green"
                                android:textSize="@dimen/text_size_13sp" />

                            <TextView
                                android:id="@+id/tvNoOfOccupied"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/heebo_bold"
                                android:text="@string/_04"
                                android:textColor="@color/color_accent_green"
                                android:textSize="@dimen/text_size_11sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:fontFamily="@font/heebo_medium"
                                android:text="@string/vacant"
                                android:textColor="@color/color_accent_yellow"
                                android:textSize="@dimen/text_size_11sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_5dp"
                                android:layout_marginEnd="@dimen/margin_5dp"
                                android:fontFamily="@font/heebo_bold"
                                android:text="@string/full_collen"
                                android:textColor="@color/color_accent_yellow"
                                android:textSize="@dimen/text_size_13sp" />

                            <TextView
                                android:id="@+id/tvNoOfVacant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/heebo_bold"
                                android:text="@string/_06"
                                android:textColor="@color/color_accent_yellow"
                                android:textSize="@dimen/text_size_11sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bubble_receive"
                            android:layout_marginTop="@dimen/margin_6dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPropertyCatagory1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/heebo_medium"
                                android:paddingStart="@dimen/margin_16dp"
                                android:paddingTop="@dimen/margin_8dp"
                                android:paddingEnd="@dimen/margin_16dp"
                                android:paddingBottom="@dimen/margin_8dp"
                                android:text="@string/residential_building"
                                android:textColor="@color/color_accent_grey"
                                android:textSize="@dimen/text_size_11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bubble_receive"
                            android:layout_marginTop="@dimen/margin_6dp"
                            android:layout_marginStart="@dimen/margin_10dp"
                            android:layout_marginEnd="@dimen/margin_10dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPropertyType1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/heebo_medium"
                                android:paddingStart="@dimen/margin_16dp"
                                android:paddingTop="@dimen/margin_8dp"
                                android:paddingEnd="@dimen/margin_16dp"
                                android:paddingBottom="@dimen/margin_8dp"
                                android:text="@string/sale"
                                android:textColor="@color/color_accent_grey"
                                android:textSize="@dimen/text_size_11sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/net_worth"
                        android:textSize="@dimen/text_size_9sp" />

                    <TextView
                        android:id="@+id/tvBuildingNetWorth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/sar_200_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="#F1F3F3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/income"
                        android:textSize="@dimen/text_size_9sp" />

                    <TextView
                        android:id="@+id/tvBuildingIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/sar_520_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/outstanding_deu"
                        android:textSize="@dimen/text_size_9sp" />

                    <TextView
                        android:id="@+id/tvBuildingOutStandingDue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/sar_845_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="#F1F3F3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/pending"
                        android:textSize="@dimen/text_size_9sp" />

                    <TextView
                        android:id="@+id/tvBuildingPending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/heebo_medium"
                        android:gravity="center"
                        android:text="@string/sar_4587_00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOwnerBuildingImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_17dp" />

            <!--<TextView
                android:id="@+id/llEmptyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_20dp"
                android:text="@string/no_apartments_to_view"
                android:textColor="@color/material_red_500"
                android:fontFamily="@font/heebo_medium"
                android:visibility="gone" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hideApartmentBtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingStart="@dimen/margin_10dp"
                    android:paddingEnd="@dimen/margin_10dp"
                    android:text="@string/hide_appartment"
                    android:textAllCaps="false"
                    android:textColor="@color/color_accent_green"
                    android:textSize="@dimen/text_size_13sp"
                    app:cornerRadius="@dimen/margin_20dp"
                    app:strokeColor="@color/color_accent_green" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/owner_property_image_viewDetailsbtn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:fontFamily="@font/heebo_medium"
                    android:paddingStart="@dimen/margin_10dp"
                    android:paddingEnd="@dimen/margin_10dp"
                    android:text="@string/view_details"
                    android:textAllCaps="false"
                    android:textColor="@color/color_accent_grey"
                    android:textSize="@dimen/text_size_13sp"
                    app:cornerRadius="@dimen/margin_20dp"
                    app:strokeColor="@color/color_accent_grey" />

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>