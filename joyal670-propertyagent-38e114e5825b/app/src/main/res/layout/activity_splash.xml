<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_image2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_logo">

    <ImageView
        android:id="@+id/splash_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_logo_plane"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/splash_image3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splash_logo_text"
        app:layout_constraintEnd_toEndOf="@id/splash_image1"
        app:layout_constraintStart_toStartOf="@id/splash_image1"
        app:layout_constraintTop_toTopOf="@id/splash_image1"
        android:layout_marginTop="@dimen/margin_110dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>