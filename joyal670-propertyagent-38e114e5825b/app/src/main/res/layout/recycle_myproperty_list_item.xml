<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:orientation="horizontal">

        <com.property.propertyagent.utils.RoundRectCornerImageView
            android:id="@+id/ivAssignedPropertyImage"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_14dp"
            android:src="@drawable/sample_apartment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_14dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivAssignedPropertyImage"
            app:layout_constraintTop_toTopOf="@+id/ivAssignedPropertyImage">

            <TextView
                android:id="@+id/tvPropertyType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_bold"
                android:text="@string/apartment_for_rent"
                android:textColor="@color/color_accent_grey_light"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/tvAssignedPropertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/building_name"
                android:textColor="@color/color_accent_green"
                android:textSize="@dimen/text_size_13sp" />

            <TextView
                android:id="@+id/tvPropertyTypeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_medium"
                android:text=""
                android:textColor="@color/color_accent_grey_light"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2dp"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/location"
                android:textColor="@color/color_accent_grey_lighter"
                android:textSize="@dimen/text_size_10sp" />

            <TextView
                android:id="@+id/myPropertyRecyerView_LocationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/buraydah_52385_saudi_arabia"
                android:textColor="@color/color_accent_grey_light"
                android:textSize="@dimen/text_size_12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myPropertyRecyerView_ViewDetailsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_accent_green"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/view_details"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>