<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_10dp"
    android:padding="@dimen/margin_10dp"
    android:layout_margin="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_65dp"
                android:layout_weight=".4"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_5dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/ivPropertyImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_flat" />

            </com.google.android.material.card.MaterialCardView>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPropertyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/property_name"
                    android:textColor="@color/color_accent_grey_light_new"
                    android:textSize="@dimen/text_size_13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/property_code"
                        android:textColor="@color/color_accent_grey_light_new"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tvPropertycCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_bold"
                        android:text="@string/_2545220"
                        android:padding="@dimen/margin_3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/color_accent_grey_new"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvLocationName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/margin_3dp"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/al_majma_ah_15362_saudi_arabia"
                    android:textColor="@color/color_accent_grey"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:textSize="@dimen/text_size_14sp"
                    android:maxLines="1"
                    app:drawableStartCompat="@drawable/ic_locationmarker_grey" />

                <TextView
                    android:id="@+id/tvPropertyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/aed_250_000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp" />

                <TextView
                    android:id="@+id/tvPropertyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/appartment_for_rent"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:textColor="@color/color_accent_grey_light_new"
                    android:textSize="@dimen/text_size_12sp" />

                <LinearLayout
                    android:id="@+id/rentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/rent_start"
                        android:textColor="@color/color_accent_grey_light_new"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:text="  :  "
                        android:textColor="@color/color_accent_grey_light_new"
                        android:textSize="@dimen/text_size_13sp" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/heebo_medium"
                        android:text="@string/_28_11_2020"
                        android:textColor="@color/color_accent_grey_light_new"
                        android:textSize="@dimen/text_size_12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="#F0F6FF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:padding="@dimen/margin_4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/payment_period"
                    android:textColor="@color/color_accent_grey_light_new"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tvPaymentPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/every_month"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_5dp"
                android:visibility="gone"
                android:padding="@dimen/margin_4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/payment_amount"
                    android:textColor="@color/color_accent_grey_light_new"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tvPaymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/aed_250_00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/endLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:padding="@dimen/margin_4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="@string/last_payment"
                    android:textColor="@color/color_accent_grey_light_new"
                    android:textSize="@dimen/text_size_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_medium"
                    android:text="  :  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/tvEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/heebo_bold"
                    android:text="@string/_20_05_2020"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70dp"
            android:layout_gravity="center"
            android:gravity="end|center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/owner_viewPayemnt_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#4F4F4F"
                android:textSize="@dimen/text_size_12sp"
                android:fontFamily="@font/heebo_medium"
                android:text="@string/view_payment_history"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/margin_5dp"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/margin_20dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

