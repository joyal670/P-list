<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/margin_10dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="@dimen/margin_15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_7dp"
        android:layout_marginBottom="@dimen/margin_7dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_report_owner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyerview_adapter_reports_typeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/download_report"
                android:fontFamily="@font/heebo_medium"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="#464646"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing"
                android:fontFamily="@font/heebo_medium"
                android:textSize="@dimen/text_size_12sp"
                android:visibility="gone"
                android:textColor="#7C7C7C"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/recyerview_adapter_reports_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:fontFamily="@font/heebo_medium"
                app:cornerRadius="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:text="@string/vacant_report"
                android:textSize="@dimen/text_size_12sp"
                android:backgroundTint="@color/color_accent_blue_statusbar"
                android:textAllCaps="false"
                app:iconTint="@color/white"
                app:icon="@drawable/ic_download_white"
                app:iconGravity="textStart"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>