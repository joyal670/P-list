<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16dp"
    android:layout_marginEnd="@dimen/dimen_16dp"
    android:layout_marginBottom="@dimen/dimen_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvQA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/edit_text_black"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toStartOf="@+id/ivIcon"
        android:text="@string/dummy_faq"
        />
    <ImageView
        android:layout_marginStart="@dimen/dimen_24dp"
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvQA"
        app:layout_constraintBottom_toBottomOf="@id/tvQA"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintSub"
        android:paddingTop="@dimen/dimen_24dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvQA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAns"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/edit_text_black"
            android:textAlignment="viewStart"
            android:text="@string/dummy_faq"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
