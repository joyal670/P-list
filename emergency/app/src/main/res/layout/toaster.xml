<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llToastBackground"
    android:gravity="center_vertical"
    android:minHeight="?actionBarSize"
    android:orientation="horizontal"
    tools:background="@color/color_accent_green"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/acivStatus"
        app:srcCompat="@drawable/ic_round_warning_24"
        android:padding="@dimen/_2sdp"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        tools:ignore="VectorDrawableCompat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actvStatus"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="0dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        android:textSize="@dimen/_12sdp"
        tools:text="Medicine name moved to Active Lorem ipsum, or lipsum as it is. "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="0dp" />

</LinearLayout>
