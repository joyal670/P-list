<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/tools">
<com.google.android.material.card.MaterialCardView
    android:layout_margin="@dimen/dimen_16dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/margin_8dp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_close"
            android:padding="@dimen/margin_16dp"
            app:tint="@color/edit_text_black" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintImage1"
            app:layout_constraintTop_toBottomOf="@+id/ivClose"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="160dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="@dimen/dimen_32dp"
                android:id="@+id/iv1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_slider_img2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintImage2"
            app:layout_constraintTop_toBottomOf="@+id/ivClose"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="160dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginStart="@dimen/dimen_32dp"
                android:id="@+id/iv2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_slider_vector1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_22dp"
            android:textColor="@color/edit_text_black"
            app:layout_constraintStart_toStartOf="@id/constraintImage1"
            app:layout_constraintTop_toBottomOf="@+id/constraintImage1"
            app:layout_constraintEnd_toEndOf="@id/constraintImage1"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/primary_user"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/dimen_22dp"
            android:textColor="@color/edit_text_black"
            app:layout_constraintStart_toStartOf="@id/tvPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tvPrimary"
            app:layout_constraintEnd_toEndOf="@id/tvPrimary"
            android:fontFamily="@font/inter_regular"
            android:text="@string/primary_user_content"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/dimen_22dp"
            android:textColor="@color/edit_text_black"
            app:layout_constraintStart_toStartOf="@id/constraintImage2"
            app:layout_constraintTop_toBottomOf="@+id/constraintImage2"
            app:layout_constraintEnd_toEndOf="@id/constraintImage2"
            android:fontFamily="@font/inter_semi_bold"
            android:text="@string/secondary_users"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_22dp"
            android:textColor="@color/edit_text_black"
            app:layout_constraintStart_toStartOf="@id/tvSecondary"
            app:layout_constraintTop_toBottomOf="@+id/tvSecondary"
            app:layout_constraintEnd_toEndOf="@id/tvSecondary"
            android:fontFamily="@font/inter_regular"
            android:text="@string/secondary_users_content"
            android:textAlignment="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>




</androidx.constraintlayout.widget.ConstraintLayout>
