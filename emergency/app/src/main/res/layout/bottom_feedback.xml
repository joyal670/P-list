<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<com.google.android.material.card.MaterialCardView
    app:cardCornerRadius="10dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="@dimen/dimen_26dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tvAdditionalComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/edit_text_black"
        android:text="@string/addtional_comments"/>
    <EditText
        android:id="@+id/etComments"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAdditionalComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dec"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/edit_text_black"
        android:textSize="@dimen/text_size_14sp"
        android:background="@drawable/edit_text_boarder"
        android:minLines="5"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFeedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/submit"
        style="@style/submit_button_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etComments" />
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
