<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <ImageView
        android:id="@+id/ivSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSignUp"
        style="@style/title22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_72dp"
        android:text="@string/register"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSignUp" />

    <EditText
        android:id="@+id/etName"
        style="@style/edit18"
        android:layout_marginTop="@dimen/dimen_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_boarder"
        android:hint="@string/hint_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSignUp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:autofillHints="name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etMobile"
        android:layout_marginTop="@dimen/dimen_18dp"
        style="@style/edit18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_boarder"
        android:hint="@string/hint_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:autofillHints="phone"
        android:inputType="phone"
        android:maxEms="10"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:text="@string/submit"
        style="@style/submit_button_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMobile"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCareGiver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60dp"
        android:text="@string/would_you_like"
        style="@style/white_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/dimen_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
