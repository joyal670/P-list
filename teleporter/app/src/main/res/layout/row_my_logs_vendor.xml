<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_small"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/rounded_edit_text_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_edit_text"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_large"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/padding_large"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small">

                <com.ashtechlabs.teleporter.custom_views.CustomFontView
                    android:id="@+id/txtOrderNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_normal"
                    android:drawableStart="@drawable/ic_order"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_large"
                    android:layout_marginStart="@dimen/padding_large"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:padding="@dimen/padding_small">
                <com.ashtechlabs.teleporter.custom_views.CustomFontView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableStart="@drawable/ic_date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />

                <com.ashtechlabs.teleporter.custom_views.CustomFontView
                    android:id="@+id/txtTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_normal"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableStart="@drawable/ic_time"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />
</LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_parcel" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_normal">


                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/txtItemType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_large"
                        android:drawablePadding="@dimen/padding_small"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_medium" />


                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/txtLocationFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_normal"
                        android:drawableStart="@drawable/ic_from"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_medium" />


                    <com.ashtechlabs.teleporter.custom_views.CustomFontView
                        android:id="@+id/txtLocationTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_normal"
                        android:drawableStart="@drawable/ic_to"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_medium" />


                </LinearLayout>


            </LinearLayout>

            <com.ashtechlabs.teleporter.custom_views.CustomFontView
                android:id="@+id/txtStatus"
                style="@style/RoundedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_large"
                android:layout_marginStart="@dimen/padding_large"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit"
                android:gravity="center"
                android:padding="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/yellow"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_large"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnStartService"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_log_ht"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:drawableStart="@drawable/ic_accept"
                    android:text="@string/start_service"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light" />

                <Button
                    android:id="@+id/btnViewInMap"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_log_ht"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:drawableStart="@drawable/ic_map"
                    android:text="@string/update_order"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light" />


                <Button
                    android:id="@+id/btnEndService"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/circle_log_ht"
                    android:layout_marginEnd="@dimen/spacing_tiny"
                    android:layout_marginStart="@dimen/spacing_tiny"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:drawableStart="@drawable/ic_cancel"
                    android:text="@string/end_service"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_light" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
