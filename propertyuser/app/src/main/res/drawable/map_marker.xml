<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

        <item
            android:width="12dp"
            android:height="12dp"
            android:gravity="bottom|center_horizontal">
            <rotate
                android:fromDegrees="45"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="45">
                <shape android:shape="rectangle">

                    <corners android:bottomRightRadius="2dp"/>

                    <gradient
                        android:angle="0"
                        android:endColor="@color/green_solid"
                        android:startColor="@color/green_solid"
                        android:type="linear" />
                </shape>

            </rotate>
        </item>
    <item
        android:width="14dp"
        android:height="11dp">
        <bitmap
            android:gravity="bottom|left"
            android:src="@drawable/tick_newone" />

    </item>
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="top|center_horizontal">
        <rotate
            android:fromDegrees="70"
            android:pivotX="90%"
            android:pivotY="25%"
            android:toDegrees="45">
            <shape android:shape="oval">

                <corners android:bottomRightRadius="2dp"/>

                <gradient
                    android:angle="0"
                    android:endColor="@color/green_solid"
                    android:startColor="@color/green_solid"
                    android:type="linear" />
            </shape>

        </rotate>
    </item>

    <item
        android:width="120dp"
        android:height="36dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">

            <gradient
                android:angle="0"
                android:endColor="@color/green_solid"
                android:startColor="@color/green_solid"
                android:type="linear" />

            <corners android:radius="6dp" />

        </shape>

    </item>


</layer-list>