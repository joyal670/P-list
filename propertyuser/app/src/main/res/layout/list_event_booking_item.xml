<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/pageMarginAndOffset"
    android:layout_marginRight="@dimen/pageMarginAndOffset"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.property.propertyuser.utils.RoundRectCornerImageView
        android:layout_width="260dp"
        android:layout_height="150dp"
        android:id="@+id/roundedEventImage"
        android:src="@drawable/placeholder_1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_16dp"
        />
    <TextView
        android:id="@+id/tvEventType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_regular"
        android:maxLines="1"
        android:text="@string/tvEventType"
        android:textColor="@color/green_light_1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/text_size_14sp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/roundedEventImage"
        />
    <TextView
        android:id="@+id/tvEventAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_extrabold"
        android:maxLines="1"
        android:text="@string/tvEventAmount"
        android:textColor="@color/green_light_1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/text_size_24sp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvEventType"
        />
    <TextView
        android:id="@+id/tvEventIncludedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_medium"
        android:maxLines="1"
        android:text="@string/tvEventIncludedText"
        android:textColor="@color/lightGray1"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="@dimen/text_size_12sp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvEventAmount"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvEventIncludeList"
        tools:itemCount="3"
        tools:listitem="@layout/list_event_item_description"
        app:layout_constraintTop_toBottomOf="@+id/tvEventIncludedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_20dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBookNow"
        android:layout_width="178dp"
        android:layout_height="55dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/btnBookNow"
        android:textAllCaps="false"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14sp"
        app:backgroundTint="@color/green_light_1"
        app:cornerRadius="@dimen/radius_22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvEventIncludeList"
        android:layout_margin="@dimen/margin_20dp"
        app:strokeColor="@color/green_dark_1"
        app:strokeWidth="@dimen/margin_2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>