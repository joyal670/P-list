<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.main.event.event_details.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">

    />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintMain">

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_semibold"
            android:maxLines="2"
            android:textDirection="locale"
            android:text="@string/tvEventName"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tvEventDescription1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:textDirection="locale"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/tvEventDescription1"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/margin_10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEventName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintSubOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEventDescription1"
            android:layout_marginTop="@dimen/margin_20dp">

            <TextView
                android:id="@+id/tvDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:text="@string/tvDateText"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray1"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvEventDate"
                app:layout_constraintStart_toStartOf="@+id/tvEventDate"
                android:layout_marginBottom="@dimen/margin_20dp"
                />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="2"
                android:text="@string/tvEventDate"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintEnd_toStartOf="@+id/ivLine"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"/>

            <View
                android:id="@+id/ivLine"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/lightGray"
                app:layout_constraintEnd_toStartOf="@+id/tvEventLocation"
                app:layout_constraintStart_toEndOf="@+id/tvEventDate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                />
            <TextView
                android:id="@+id/tvLocationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:text="@string/tvLocationText"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray1"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvEventLocation"
                app:layout_constraintStart_toStartOf="@+id/tvEventLocation"
                android:layout_marginBottom="@dimen/margin_20dp"
                />
            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="2"
                android:text="@string/tvEventLocation"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ivLine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:drawableEnd="@drawable/ic_map_pin"
                android:drawablePadding="@dimen/margin_10dp"
                android:background="?selectableItemBackground"
                android:clickable="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvEventDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:textDirection="locale"
            android:fontFamily="@font/manrope_medium"
            android:text="@string/tvEventDescription2"
            android:textAlignment="textStart"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintSubOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_77dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>