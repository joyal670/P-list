<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.filter.FilterActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_main"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/includeNoInternet"
        layout="@layout/layout_no_network"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearNoDataFound"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/includeNoDataFound"
            layout="@layout/layout_no_data_found"
            />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_56dp"
        android:fillViewport="true"
        android:visibility="gone"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_91dp"
                android:background="@color/light_white_1"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/sivUserProfile"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:elevation="8dp"
                android:scaleType="centerCrop"
                android:padding="@dimen/margin_1dp"
                android:src="@drawable/ic_account_circle"
                app:layout_constraintBottom_toBottomOf="@+id/llTop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llTop"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnChangeImage"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:backgroundTint="@color/green_light_1"
                app:cornerRadius="@dimen/radius_20dp"
                app:layout_constraintEnd_toStartOf="@+id/btnRemove"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/sivUserProfile"
                app:layout_constraintTop_toBottomOf="@+id/sivUserProfile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnRemove"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp"
                app:backgroundTint="@color/brown"
                app:cornerRadius="@dimen/radius_20dp"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="@dimen/margin_8dp"
                app:layout_constraintEnd_toEndOf="@+id/sivUserProfile"
                app:layout_constraintStart_toEndOf="@+id/btnChangeImage"
                app:layout_constraintTop_toBottomOf="@+id/sivUserProfile"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llDetails"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_50dp"
                app:layout_constraintTop_toBottomOf="@+id/btnChangeImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etProfileName"
                    android:hint="@string/etUserName"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/bg_square_border_gray_1"
                    android:textColor="@color/gray_200"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_18dp"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:textDirection="locale"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_5dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etProfileEmail"
                    android:hint="@string/etUserEmail"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/bg_square_border_gray_1"
                    android:textColor="@color/gray_200"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_18dp"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:textDirection="locale"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etProfilePhone"
                    android:hint="@string/etUserMobile"
                    android:inputType="number"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/bg_square_border_gray_1"
                    android:textColor="@color/gray_200"
                    android:textSize="@dimen/text_size_14sp"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_18dp"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:textDirection="locale"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etProfileLocation"
                    android:background="@drawable/bg_square_border_gray_1"
                    android:textColor="@color/gray_200"
                    android:hint="@string/etAddress"
                    android:textSize="@dimen/text_size_14sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_regular"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_18dp"
                    android:paddingEnd="@dimen/margin_16dp"
                    android:textDirection="locale"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_15dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnProfileUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/btnProfileUpdate"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11sp"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="@dimen/radius_6dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearSubTwo"
                    app:layout_constraintBottom_toBottomOf="@+id/linearSubTwo"
                    app:layout_constraintStart_toEndOf="@+id/linearSubTwo"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>