<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvBookingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_1dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_semibold"
        android:maxLines="2"
        android:text="@string/tvBookingText"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvSubHeadingOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_1dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_semibold"
        android:maxLines="2"
        android:text="@string/tvSubHeadingOne"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBookingText" />
    <TextView
        android:id="@+id/tvSubHeadingOneDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/tvEventDescription1"
        android:textAlignment="textStart"
        android:textColor="@color/dark_gray1"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubHeadingOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvSubHeadingTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_1dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_semibold"
        android:maxLines="2"
        android:text="@string/tvSubHeadingTwo"
        android:textColor="@color/matterhorn"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubHeadingOneDesc" />
    <TextView
        android:id="@+id/tvSubHeadingTwoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/tvEventDescription1"
        android:textAlignment="textStart"
        android:textColor="@color/dark_gray1"
        android:textSize="@dimen/text_size_14sp"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSubHeadingTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>