<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.main.my_property.view_details.service_details.ServiceDetailsActivity">

    <LinearLayout
        android:id="@+id/referMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMainRefer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/gray_90"
            android:visibility="visible">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvRefer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/margin_0dp"
                app:cardElevation="@dimen/margin_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintSubOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.flaviofaria.kenburnsview.KenBurnsView
                        android:id="@+id/ivReferal"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="@dimen/margin_30dp"
                        android:layout_marginTop="@dimen/margin_40dp"
                        android:layout_marginEnd="@dimen/margin_30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/referal_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/referal_image"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvReferalCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_30dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:background="@drawable/dashed_border_rectangle"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:paddingStart="@dimen/margin_30dp"
                        android:paddingTop="@dimen/margin_14dp"
                        android:paddingEnd="@dimen/margin_30dp"
                        android:paddingBottom="@dimen/margin_14dp"
                        android:text="@string/tvReferalCode"
                        android:textColor="@color/green_light_1"
                        android:textSize="@dimen/text_size_16sp"
                        app:layout_constraintEnd_toEndOf="@+id/ivReferal"
                        app:layout_constraintStart_toStartOf="@+id/ivReferal"
                        app:layout_constraintTop_toBottomOf="@+id/ivReferal" />

                    <TextView
                        android:id="@+id/tvShareCodeText"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center"
                        android:text="@string/tvShareCodeText"
                        android:textAlignment="center"
                        android:textColor="@color/dark_gray1"
                        android:textSize="@dimen/text_size_16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvReferalCode" />

                    <com.marozzi.roundbutton.RoundButton
                        android:id="@+id/btnRefer"
                        android:layout_width="132dp"
                        android:layout_height="@dimen/margin_50dp"
                        android:layout_marginTop="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_30dp"
                        android:fontFamily="@font/manrope_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:minLines="1"
                        android:text="@string/btnRefer"
                        android:textAllCaps="false"
                        android:textSize="@dimen/text_size_16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvShareCodeText"
                        app:rb_animation_alpha="false"
                        app:rb_animation_corner_radius="22dp"
                        app:rb_animation_duration="500"
                        app:rb_animation_progress_color="@color/colorGrey"
                        app:rb_animation_progress_padding="8dp"
                        app:rb_animation_progress_style="dots"
                        app:rb_animation_progress_width="2dp"
                        app:rb_background_color="@color/green_light_1"
                        app:rb_background_color_pressed="@color/green_light_1"
                        app:rb_corner_color="@color/green_light_1"
                        app:rb_corner_color_pressed="@color/green_light_1"
                        app:rb_corner_radius="22dp"
                        app:rb_corner_width="1dp"
                        app:rb_text_color="@color/white"
                        app:rb_text_color_pressed="@android:color/white" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_24dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="1"
                android:text="@string/"
                android:textColor="@color/brown"
                android:textDirection="locale"
                android:textSize="@dimen/text_size_14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvRefer" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearSubOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvShare">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFaceBook"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="1"
                    android:minLines="1"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_f"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/margin_1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnTwitter"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTwitter"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="1"
                    android:minLines="1"
                    app:backgroundTint="@color/skyblue"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_twitter"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/margin_1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnInstagram"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btnFaceBook"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnInstagram"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="1"
                    android:minLines="1"
                    app:backgroundTint="@color/pink"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_instagram"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/margin_1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnCopy"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btnTwitter"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopy"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="1"
                    android:minLines="1"
                    app:backgroundTint="@color/dark_gray6"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_copy"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/margin_1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btnInstagram"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/blue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="132dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnShare"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:visibility="gone"
                app:backgroundTint="@color/night_rider"
                app:cornerRadius="@dimen/radius_22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearSubOne"
                app:strokeColor="@color/night_rider" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/includeNoInternet"
            layout="@layout/layout_no_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearNoDataFound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/includeNoDataFound"
                layout="@layout/layout_no_data_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
