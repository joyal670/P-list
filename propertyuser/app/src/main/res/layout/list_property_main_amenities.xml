<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvPropertyDetailsFeatured"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginTop="@dimen/margin_5dp"
        android:fontFamily="@font/heebo_semibold"
        android:text="@string/tvPropertyDetailsBedCount" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAmenity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:itemCount="2"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/list_property_detail_features_item"
        android:layout_gravity="start|center"/>
</LinearLayout>