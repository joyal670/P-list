<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@color/gray_90">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainConstraintBookTour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constraintMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/white">

                <com.property.propertyuser.utils.RoundRectCornerImageView
                    android:layout_width="130dp"
                    android:layout_height="96dp"
                    android:id="@+id/roundedPropertyImage"
                    android:src="@drawable/placeholder_1"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_20dp"/>
                <TextView
                    android:id="@+id/tvPropertyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="2"
                    android:text="@string/tvPropertyName"
                    android:textColor="@color/gray_brown"
                    android:textSize="@dimen/text_size_14sp"
                    android:textDirection="locale"
                    app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/roundedPropertyImage" />

                <TextView
                    android:id="@+id/tvPropertyCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_semibold"
                    android:maxLines="2"
                    android:textDirection="locale"
                    android:text="@string/tvPropertyCode"
                    android:textColor="@color/gray_brown"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyName" />

                <LinearLayout
                    android:id="@+id/linearSubOne"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyCode">

                    <TextView
                        android:id="@+id/tvPropertyAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:text="@string/tvPropertyAmount"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/text_size_16sp" />

                    <ImageView
                        android:id="@+id/ivVerticalLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:background="@color/black_light"
                        android:src="@drawable/ic_vertical_line_brown"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvBHK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_semibold"
                        android:maxLength="7"
                        android:maxLines="1"
                        android:text="@string/tvBHK"
                        android:textColor="@color/dark_gray1"
                        android:textSize="@dimen/text_size_13sp"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:visibility="gone"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvPropertyLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:drawableStart="@drawable/ic_map_location"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_bold"
                    android:maxLines="3"
                    android:text="@string/tvPropertyLocation"
                    android:textColor="@color/gray_brown"
                    android:textSize="@dimen/text_size_13sp"
                    android:textDirection="locale"
                    app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
                    app:layout_constraintTop_toBottomOf="@+id/linearSubOne"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDateTimeTitle"
                    android:text="@string/tvDateTimeTitle"
                    android:textColor="@color/dark_gray2"
                    android:textSize="@dimen/text_size_12sp"
                    android:fontFamily="@font/manrope_regular"
                    app:layout_constraintTop_toBottomOf="@+id/roundedPropertyImage"
                    android:layout_marginTop="@dimen/margin_30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivClock"
                    android:src="@drawable/ic_clock"
                    app:layout_constraintTop_toBottomOf="@id/tvDateTimeTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_10dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearSubTwo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@+id/ivClock"
                    app:layout_constraintEnd_toStartOf="@+id/btnChangeDateTime"
                    app:layout_constraintTop_toTopOf="@+id/ivClock"
                    app:layout_constraintBottom_toBottomOf="@+id/ivClock"
                    >

                    <TextView
                        android:id="@+id/tvBookedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:text="@string/tvBookedTime"
                        android:textColor="@color/dark_gray3"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/ivVerticalLine1"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_6dp"
                        android:background="@color/black_light"
                        android:src="@drawable/ic_vertical_line_brown"
                        app:layout_constraintStart_toEndOf="@+id/tvBookedTime"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/tvBookedDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_6dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_semibold"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:text="@string/tvBookedDate"
                        android:textColor="@color/dark_gray1"
                        android:textSize="@dimen/text_size_11sp"
                        app:layout_constraintStart_toEndOf="@+id/ivVerticalLine1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/btnChangeDateTime"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11sp"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="@dimen/radius_18dp"
                    android:layout_marginEnd="@dimen/margin_16dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearSubTwo"
                    app:layout_constraintBottom_toBottomOf="@+id/linearSubTwo"
                    app:layout_constraintStart_toEndOf="@+id/linearSubTwo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPropertyLocationTitle"
                    android:text="@string/tvPropertyLocationTitle"
                    android:textColor="@color/dark_gray2"
                    android:textSize="@dimen/text_size_12sp"
                    android:fontFamily="@font/manrope_regular"
                    app:layout_constraintTop_toBottomOf="@+id/ivClock"
                    android:layout_marginTop="@dimen/margin_36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ivMapPin"
                    android:src="@drawable/ic_map_pin_1"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyLocationTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_10dp"/>


                <TextView
                    android:id="@+id/tvLocationName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5dp"
                    android:layout_marginEnd="@dimen/margin_5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_semibold"
                    android:maxLines="3"
                    android:text="@string/tvLocationName"
                    android:textColor="@color/dark_gray3"
                    android:textSize="@dimen/text_size_14sp"
                    android:textDirection="locale"
                    app:layout_constraintStart_toEndOf="@+id/ivMapPin"
                    app:layout_constraintEnd_toStartOf="@id/btnOpenMap"
                    app:layout_constraintTop_toTopOf="@+id/ivMapPin"
                    app:layout_constraintBottom_toBottomOf="@+id/ivMapPin"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/btnOpenMap"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_11sp"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="@dimen/radius_18dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvLocationName"
                    app:layout_constraintBottom_toBottomOf="@+id/tvLocationName"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnOpenMap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBookATourFinal"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/btnBookATourFinal"
                android:textAllCaps="false"
                android:maxLines="1"
                android:minLines="1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp"
                app:backgroundTint="@color/green_light_1"
                android:layout_marginTop="@dimen/margin_40dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_marginStart="@dimen/margin_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintMain"
                app:layout_constraintStart_toStartOf="parent"
                app:icon="@drawable/ic_tour_map"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/margin_16dp"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/includeNoInternetBookTour"
            layout="@layout/layout_no_network"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearNoDataFoundBookTour"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/includeNoPropertyFound"
                layout="@layout/layout_no_data_found"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>