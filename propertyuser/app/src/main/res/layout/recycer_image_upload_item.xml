<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_5dp"
    android:layout_marginEnd="@dimen/margin_5dp"
    android:layout_marginBottom="@dimen/margin_5dp"
    app:cardCornerRadius="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_itemImg"
        android:layout_width="@dimen/margin_65dp"
        android:layout_height="@dimen/margin_70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/building_1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_itemImg_remove"
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="@dimen/margin_20dp"
        android:src="@drawable/ic_cancel_img"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="@dimen/margin_5dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>