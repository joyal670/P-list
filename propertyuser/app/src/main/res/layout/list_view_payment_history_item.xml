<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mcvPropertyDetails3"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="@dimen/margin_10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMain3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvServiceDatePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginEnd="@dimen/margin_1dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/gray_brown"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvServiceNamePayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginEnd="@dimen/margin_1dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/gray_32"
                android:textSize="@dimen/text_size_15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceDatePayment" />

            <TextView
                android:id="@+id/tvServiceAmountPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_1dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/red_1"
                android:textSize="@dimen/text_size_15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="@+id/tvServiceNamePayment" />

            <TextView
                android:id="@+id/tvServiceDescriptionPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_marginEnd="@dimen/margin_120dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_medium"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/gray_brown"
                android:textSize="@dimen/text_size_12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceNamePayment" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:orientation="vertical"
                android:backgroundTint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/tvServiceDescriptionPayment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>