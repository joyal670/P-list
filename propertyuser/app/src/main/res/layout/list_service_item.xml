<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10dp"
    app:cardElevation="@dimen/margin_10dp"
    app:cardCornerRadius="@dimen/radius_22dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearMainOne"
        android:layout_margin="@dimen/margin_8dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:id="@+id/linearSubOne"
            android:background="@drawable/circular_border"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_16dp">

            <ImageView
                android:id="@+id/sivServiceImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:elevation="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_electricians"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="2"
            android:text="@string/tvServiceName"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="@dimen/margin_5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:maxLines="1"
            android:minLines="1"
            android:text="@string/btnChoose"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12sp"
            app:backgroundTint="@color/green_light_1"
            app:cornerRadius="@dimen/radius_20dp"
            app:strokeColor="@color/green_light_1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>