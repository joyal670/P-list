<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <include
        android:id="@+id/include"
        layout="@layout/toolbar_map"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvCommonPlaces"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="1"
        tools:listitem="@layout/list_common_places_item"
        android:background="@color/white"
        android:elevation="1dp"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:layout_constraintBottom_toTopOf="@+id/constraintBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvCommonPlaces"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShowProperties"
        android:text="@string/tvShowProperties"
        android:fontFamily="@font/manrope_semibold"
        android:textSize="@dimen/text_size_10sp"
        android:textColor="@color/white_smoke"
        android:background="@drawable/bg_round_border_greenlight_green"
        app:layout_constraintTop_toTopOf="@+id/map"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/margin_4dp"
        android:layout_marginStart="@dimen/margin_4dp"
        android:padding="5dp"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?selectableItemBackground"
        android:backgroundTint="@color/white"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivCloseMap"
            android:src="@drawable/ic_close"
            android:padding="@dimen/margin_8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_12dp"
            />
        <com.property.propertyuser.utils.RoundRectCornerImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:id="@+id/roundedPropertyImage"
            android:src="@drawable/placeholder_1"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_25dp"
            android:layout_marginBottom="@dimen/margin_25dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/tvPropertyNameMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_bold"
            android:maxLength="15"
            android:maxLines="1"
            android:text=""
            android:textDirection="locale"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_24dp"/>

        <TextView
            android:id="@+id/tvPropertyAmountMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_bold"
            android:maxLength="15"
            android:maxLines="1"
            android:text=""
            android:textDirection="locale"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyNameMap"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp" />

        <LinearLayout
            android:id="@+id/linearSubOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyAmountMap">

            <LinearLayout
                android:id="@+id/linarRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_rounded_green"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:id="@+id/tvRatingMap"
                    android:text=""
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="@dimen/text_size_12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_4dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    android:layout_marginStart="@dimen/margin_2dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/margin_3dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvBHK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_semibold"
                android:maxLength="7"
                android:maxLines="1"
                android:text="@string/tvBHK"
                android:textColor="@color/dark_gray1"
                android:textSize="@dimen/text_size_12sp"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvPropertyTypeDetailedMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="2"
            android:textDirection="locale"
            app:layout_constraintHorizontal_bias="0"
            android:text=""
            android:textColor="@color/gray_brown"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearSubOne" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/constraintLinarTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/roundedPropertyImage"
            app:layout_constraintTop_toBottomOf="@id/tvPropertyTypeDetailedMap"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_3dp">

            <TextView
                android:id="@+id/tvBedCountMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:drawableLeft="@drawable/ic_bed"
                android:drawablePadding="@dimen/margin_6dp"
                android:fontFamily="@font/manrope_regular"
                android:text="@string/tvBedCount"
                android:textColor="@color/gray_brown"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:id="@+id/tvBathCountMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_7dp"
                android:drawableLeft="@drawable/ic_bath"
                android:drawablePadding="@dimen/margin_6dp"
                android:fontFamily="@font/manrope_regular"
                android:text=""
                android:textColor="@color/gray_brown"
                android:textSize="@dimen/text_size_12sp"
                android:layout_marginStart="@dimen/margin_10dp"/>

            <TextView
                android:id="@+id/tvDiameterMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_7dp"
                android:drawableLeft="@drawable/ic_diameter"
                android:drawablePadding="@dimen/margin_6dp"
                android:fontFamily="@font/manrope_regular"
                android:text=""
                android:textColor="@color/gray_brown"
                android:textSize="@dimen/text_size_12sp"
                 />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>