<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_20dp"
    android:background="?selectableItemBackground"
    >
    <TextView
        android:id="@+id/tvFaqItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginEnd="@dimen/margin_30dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_semibold"
        android:text="@string/tvFaqTitle"
        android:textColor="@color/gray_200"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivPlus"
        />
    <ImageView
        android:id="@+id/ivPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:padding="@dimen/margin_8dp"
        android:src="@drawable/ic_plus_gray"
        app:layout_constraintStart_toEndOf="@+id/tvFAQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_2dp"
        android:visibility="visible"
        />
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:padding="@dimen/margin_8dp"
        android:src="@drawable/ic_cross_gray"
        app:layout_constraintStart_toEndOf="@+id/tvFAQ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_2dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvFaqItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:ellipsize="end"
        android:fontFamily="@font/manrope_medium"
        android:text="@string/tvFaqDescription"
        android:textColor="@color/lightGray3"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvFaqItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>