<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.filter.FilterActivity">

    <include
        layout="@layout/toolbar_main"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_56dp"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/includeNoInternetEventBooking"
                layout="@layout/layout_no_network"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearNoDataFoundEventBooking"
                android:orientation="vertical"
                android:background="@color/white"
                android:visibility="gone">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/includeNoPropertyFound"
                    layout="@layout/layout_no_data_found"
                    />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintEventBookingMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.property.propertyuser.utils.RoundRectCornerImageView
                    android:layout_width="109dp"
                    android:layout_height="74dp"
                    android:id="@+id/roundedEventBookingImage"
                    android:src="@drawable/placeholder_1"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_27dp"
                    />
                <TextView
                    android:id="@+id/tvEventType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_1dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_regular"
                    android:maxLines="1"
                    android:text="@string/tvEventType"
                    android:textColor="@color/green_light_1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_gravity="center"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/roundedEventBookingImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/roundedEventBookingImage"
                    />
                <TextView
                    android:id="@+id/tvEventAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_extrabold"
                    android:maxLines="1"
                    android:text="@string/tvEventAmount"
                    android:textColor="@color/green_light_1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_24sp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/tvEventType"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/roundedEventBookingImage"
                    />
                <TextView
                    android:id="@+id/tvChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/manrope_semibold"
                    android:maxLines="1"
                    android:text="@string/tvChange"
                    android:textColor="@color/lightGray4"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_gravity="center"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/roundedEventBookingImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEventAmount"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llDetails"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/margin_44dp"
                    app:layout_constraintTop_toBottomOf="@+id/roundedEventBookingImage"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/etEventBookingUserName"
                        android:hint="@string/etEventBookingUserName"
                        android:background="@drawable/bg_square_border_gray_1"
                        android:textColor="@color/gray_200"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_18dp"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:textDirection="locale"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_5dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/etEventBookingUserEmail"
                        android:hint="@string/etEventBookingUserEmail"
                        android:background="@drawable/bg_square_border_gray_1"
                        android:textColor="@color/gray_200"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_18dp"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:textDirection="locale"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_15dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/etEventBookingUserPhone"
                        android:hint="@string/etEventBookingUserPhone"
                        android:background="@drawable/bg_square_border_gray_1"
                        android:textColor="@color/gray_200"
                        android:textSize="@dimen/text_size_14sp"
                        android:fontFamily="@font/manrope_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/margin_18dp"
                        android:paddingEnd="@dimen/margin_16dp"
                        android:textDirection="locale"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_15dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        android:layout_marginTop="@dimen/margin_28dp">

                        <TextView
                            android:id="@+id/tvNumberofperson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/manrope_semibold"
                            android:maxLines="1"
                            android:text="@string/tvNumberofperson"
                            android:textColor="@color/lightGray4"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_gravity="start"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ivMinus"
                            android:src="@drawable/ic_minus_gray"
                            app:layout_constraintStart_toEndOf="@+id/tvNumberofperson"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="@dimen/margin_30dp"
                            android:background="?selectableItemBackground"
                            android:paddingTop="@dimen/margin_10dp"
                            android:paddingBottom="@dimen/margin_10dp"
                            android:paddingStart="@dimen/margin_4dp"
                            android:paddingEnd="@dimen/margin_4dp"
                            android:clickable="true"
                            />
                        <TextView
                            android:id="@+id/tvNumberofpersonValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/manrope_extrabold"
                            android:maxLines="1"
                            android:maxLength="3"
                            android:text="@string/tvNumberofpersonValue"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_18sp"
                            android:layout_gravity="center"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivMinus"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ivPlus"
                            android:src="@drawable/ic_plus_gray"
                            app:layout_constraintStart_toEndOf="@+id/tvNumberofpersonValue"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="@dimen/margin_20dp"
                            android:background="?selectableItemBackground"
                            android:padding="5dp"
                            android:clickable="true"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_25dp"
                        android:layout_marginStart="@dimen/margin_16dp">

                        <TextView
                            android:id="@+id/tvEventBookingTotalAmountText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/manrope_semibold"
                            android:maxLines="1"
                            android:text="@string/tvEventBookingTotalAmountText"
                            android:textColor="@color/lightGray4"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_gravity="start"
                            />
                        <TextView
                            android:id="@+id/tvEventBookingTotalAmountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_12dp"
                            android:layout_marginEnd="@dimen/margin_16dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/manrope_extrabold"
                            android:maxLines="1"
                            android:text="@string/tvEventBookingTotalAmountValue"
                            android:textColor="@color/gray_32"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_17sp"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnProceedToPay"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/margin_40dp"
                        android:layout_marginStart="@dimen/margin_16dp"
                        android:layout_marginBottom="@dimen/margin_20dp"
                        android:fontFamily="@font/manrope_bold"
                        android:text="@string/btnProceedToPay"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:minLines="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16sp"
                        app:backgroundTint="@color/green_light_1"
                        app:cornerRadius="@dimen/radius_2dp"
                        android:layout_marginEnd="@dimen/margin_16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/linearSubTwo"
                        app:layout_constraintBottom_toBottomOf="@+id/linearSubTwo"
                        app:layout_constraintStart_toEndOf="@+id/linearSubTwo"
                        />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>