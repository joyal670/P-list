<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcvReward"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/radius_22dp"
    app:cardElevation="@dimen/margin_10dp"
    android:elevation="@dimen/margin_8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_margin="@dimen/margin_8dp"
    android:clickable="true"
    app:strokeColor="@color/white"
    app:strokeWidth="@dimen/margin_3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearMain"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReferText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:maxLength="15"
            android:text="@string/tvReferText"
            android:textAlignment="center"
            android:textColor="@color/dark_gray1"
            android:textSize="@dimen/text_size_14sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30dp"
            />
        <TextView
            android:id="@+id/tvRewardAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_extrabold"
            android:maxLines="1"
            android:maxLength="9"
            android:text="@string/tvRewardAmount"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20sp"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/tvReferalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:background="@drawable/dashed_border_rectangle"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_bold"
            android:maxLines="1"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingTop="@dimen/margin_8dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_8dp"
            android:text="@string/tvReferalCode"
            android:textColor="@color/green_light_1"
            android:textSize="@dimen/text_size_14sp"
            android:clickable="true"
            android:foreground="?selectableItemBackground"/>
        <TextView
            android:id="@+id/tvRedeemed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_medium"
            android:maxLines="1"
            android:maxLength="15"
            android:text="@string/tvRedeemed"
            android:textColor="@color/green_light_2"
            android:textSize="@dimen/text_size_12sp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_16dp"
            android:drawableStart="@drawable/ic_check_circle"
            android:drawableTint="@color/green_light_2"
            android:drawablePadding="@dimen/margin_5dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvExpiaryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:ellipsize="end"
            android:fontFamily="@font/manrope_semibold"
            android:maxLines="1"
            android:text="@string/tvExpiaryDate"
            android:textColor="@color/lightGray1"
            android:textSize="@dimen/text_size_11sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:visibility="visible"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>