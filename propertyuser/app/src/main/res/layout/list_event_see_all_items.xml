<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:id="@+id/mcvEventSeeAll"
    android:clickable="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:id="@+id/ivEventImageSeeAll"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/event"
                android:scaleType="centerCrop"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/margin_15dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/tvEventNameSeeAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvEventName"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="@dimen/text_size_16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/text_size_16sp"
                    android:layout_marginRight="@dimen/text_size_16sp" />
                <TextView
                    android:id="@+id/tvEventDescriptionSeeAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tvEventDescription"
                    android:fontFamily="@font/manrope_semibold"
                    android:textSize="@dimen/text_size_12sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/gray_brown"
                    app:layout_constraintTop_toBottomOf="@+id/tvEventNameSeeAll"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/text_size_16sp"
                    android:layout_marginRight="@dimen/text_size_16sp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

</com.google.android.material.card.MaterialCardView>
