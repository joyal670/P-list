<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.filter.FilterActivity">

    <include
        android:id="@+id/includePrivacy"
        layout="@layout/toolbar_main"/>

    <LinearLayout
        android:id="@+id/linearPrivacy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="@dimen/margin_56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <!--<androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPrivacyPolicyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="false"
            tools:itemCount="2"
            tools:listitem="@layout/list_privacy_policy_item"
            android:visibility="gone"/>-->
        <WebView
            android:id="@+id/wvPrivacyPolicyActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/includeNoInternet"
        layout="@layout/layout_no_network"
        app:layout_constraintTop_toBottomOf="@+id/includePrivacy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearNoDataFound"
        app:layout_constraintTop_toBottomOf="@+id/includePrivacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/includeNoPropertyFound"
            layout="@layout/layout_no_data_found"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>