<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMainRentalViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.property.propertyuser.utils.RoundRectCornerImageView
                android:id="@+id/roundedRentalViewDetailsPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="@dimen/margin_16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearMainOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundedRentalViewDetailsPropertyImage">

                <LinearLayout
                    android:id="@+id/linearSubOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvRentalAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvRentalAmountText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvRentalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvPropertyCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvPropertyCodeText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvPropertyCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvNextDueDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvNextDueDateText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvNextDueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvCheckInDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvCheckInDateText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvCheckInDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvCheckOutDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvCheckOutDateText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvCheckOutDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSliverLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_25dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/ic_line_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearMainOne" />

            <LinearLayout
                android:id="@+id/linearMainTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivSliverLine1">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvViewContract"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_book" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvViewContract"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/manrope_bold"
                                android:text="@string/viewContract"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="@dimen/margin_1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:layout_weight="0.1"
                    android:background="@color/lightGray" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvQrcode"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Media -->
                        <ImageView
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_qrcode_black" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginBottom="@dimen/margin_10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPropertyKey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/manrope_bold"
                                android:text="@string/PropertyKey"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivSliverLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:src="@drawable/ic_line_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearMainTwo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayNow"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnPayNow"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/green_light_1"
                app:cornerRadius="@dimen/radius_6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnViewPaymentHistory"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearMainTwo"
                app:strokeColor="@color/green_light_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewPaymentHistory"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnViewPaymentHistory"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/gray_32"
                app:cornerRadius="@dimen/radius_6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnPayNow"
                app:layout_constraintTop_toBottomOf="@id/linearMainTwo"
                app:strokeColor="@color/green_light_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/includeNoInternetRentalViewDetails"
            layout="@layout/layout_no_network"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearNoDataFoundRentalViewDetails"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/includeNoPropertyFound"
                layout="@layout/layout_no_data_found"
                />
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>