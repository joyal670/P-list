<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/cardPropertyItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    app:cardCornerRadius="12dp"
    android:layout_marginTop="@dimen/margin_12dp"
    android:layout_marginStart="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_40dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    xmlns:fab="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- Media -->
        <LinearLayout
            android:id="@+id/linearTransparentSimilar"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:focusable="true"
            android:clickable="true"
            android:background="?selectableItemBackground"
            android:elevation="1dp"/>

        <ImageView
            android:id="@+id/ivPropertyImageSimilar"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/event"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconFavouriteSimilar"
            android:layout_width="30dp"
            android:layout_height="41dp"
            app:backgroundTint="@color/lightGray"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_favorite1"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconSize="@dimen/margin_14dp"
            app:iconPadding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/lightGray"
            android:layout_margin="@dimen/margin_16dp"
            app:rippleColor="@color/flamingo"

            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/iconFavouriteSelectedSimilar"
            android:layout_width="30dp"
            android:layout_height="41dp"
            app:backgroundTint="@color/flamingo"
            app:cornerRadius="100dp"
            app:icon="@drawable/ic_favorite2"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconSize="@dimen/margin_14dp"
            app:iconPadding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/lightGray"
            android:layout_margin="@dimen/margin_16dp"
            app:rippleColor="@color/flamingo"
            android:visibility="gone"

            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="154dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/black_and_white_transparency">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvPropertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:gravity="start"
                android:hint="@string/property_name"
                android:visibility="gone"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLinearOne"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/margin_5dp"
                android:layout_marginEnd="@dimen/margin_5dp"
               app:layout_constraintStart_toStartOf="@+id/tvPropertyName"
                app:layout_constraintTop_toBottomOf="@+id/tvPropertyName"
                android:layout_marginTop="@dimen/margin_8dp">
                <LinearLayout
                    android:id="@+id/linearSubOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <TextView
                        android:id="@+id/tvPropertyAmountSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLength="14"
                        android:maxLines="1"
                        android:text="@string/tvPropertyAmount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tvPropertyDiscountAmountSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_semibold"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:text="@string/tvDiscountAmount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10sp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/linarRating"
                        android:background="@drawable/border_rounded_green"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/margin_8dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:id="@+id/tvRatingSimilar"
                            android:text="@string/tvRating"
                            android:fontFamily="@font/manrope_bold"
                            android:textSize="@dimen/text_size_12sp"
                            android:textColor="@color/white"
                            android:gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin_4dp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star"
                            android:layout_marginStart="@dimen/margin_2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_3dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBHKSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_semibold"
                        android:maxLength="7"
                        android:maxLines="1"
                        android:text="@string/tvBHK"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:id="@+id/ivGreenTagSimilar"
                android:background="@drawable/ic_green_tag"
                android:scaleY="1.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/margin_16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAppartmentTextSimilar"
                android:text="@string/tvAppartmentText"
                android:textColor="@color/black"
                android:fontFamily="@font/manrope_regular"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLinearOne"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_2dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginLeft="@dimen/margin_16dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLinarTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppartmentTextSimilar"
                android:layout_marginTop="@dimen/margin_3dp">

                <TextView
                    android:id="@+id/tvBedCountSimilar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginLeft="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:drawableLeft="@drawable/ic_bed"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tvBedCount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvBathCountSimilar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_6dp"
                    android:drawableLeft="@drawable/ic_bath"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tvBathCount"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintStart_toEndOf="@+id/tvBedCountSimilar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDiameterSimilar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:drawableLeft="@drawable/ic_diameter"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:fontFamily="@font/manrope_regular"
                    android:text="@string/tvDiameter"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    app:layout_constraintStart_toEndOf="@+id/tvBathCountSimilar"
                    app:layout_constraintTop_toTopOf="parent"/>
                <!--android:background="@drawable/transparent_rectange_white"
                android:padding="5dp"-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/constraintLinearThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLinarTwo"
                android:layout_marginTop="@dimen/margin_14dp"
                android:weightSum="4"
                >
                <com.lijiankun24.shadowlayout.ShadowLayout
                    android:id="@+id/sl1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:shadowColor="#66000000"
                    app:shadowShape="oval"
                    app:shadowDx="0dp"
                    app:shadowDy="3dp"
                    app:shadowRadius="1dp"
                    app:shadowSide="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_3dp"
                    >

                    <ImageView
                        android:id="@+id/ivInfoSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info2"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple"
                        />
                </com.lijiankun24.shadowlayout.ShadowLayout>
                <com.lijiankun24.shadowlayout.ShadowLayout
                    android:id="@+id/sl2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:shadowColor="#66000000"
                    app:shadowShape="oval"
                    app:shadowDx="0dp"
                    app:shadowDy="3dp"
                    app:shadowRadius="1dp"
                    app:shadowSide="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_3dp"
                    >

                    <ImageView
                        android:id="@+id/ivCalenderSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calender2"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple_green"/>
                </com.lijiankun24.shadowlayout.ShadowLayout>
                <com.lijiankun24.shadowlayout.ShadowLayout
                    android:id="@+id/sl3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:shadowColor="#66000000"
                    app:shadowShape="oval"
                    app:shadowDx="0dp"
                    app:shadowDy="3dp"
                    app:shadowRadius="1dp"
                    app:shadowSide="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_3dp"
                    >

                    <ImageView
                        android:id="@+id/ivMapSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_maptest1"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple_green"/>
                </com.lijiankun24.shadowlayout.ShadowLayout>
                <com.lijiankun24.shadowlayout.ShadowLayout
                    android:id="@+id/sl4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:shadowColor="#66000000"
                    app:shadowShape="oval"
                    app:shadowDx="0dp"
                    app:shadowDy="3dp"
                    app:shadowRadius="1dp"
                    app:shadowSide="bottom"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_3dp"
                    >

                    <ImageView
                        android:id="@+id/ivShareSimilar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share2"
                        android:clickable="true"
                        android:background="@drawable/custom_ripple_green"/>
                </com.lijiankun24.shadowlayout.ShadowLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>