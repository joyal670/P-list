<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMainBookedViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.property.propertyuser.utils.RoundRectCornerImageView
                android:id="@+id/roundedPropertyImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="@dimen/margin_16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/building_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearMainOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roundedPropertyImage">

                <LinearLayout
                    android:id="@+id/linearSubOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvRentalAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvRentalAmountText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvRentalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvRentalAmount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvPropertyCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvPropertyCodeText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvPropertyCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvPropertyCode1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvAdvancePaymentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvAdvancePaymentText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvAdvancePaymentAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvAdvancePaymentAmount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubFour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvStatusText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvStatus"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubFive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvDueAmountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvDueAmountText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvDueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvDueAmount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubSix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp">

                    <TextView
                        android:id="@+id/tvDueDateforPayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvDueDateforPayText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvDueDateforPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvDueDateforPay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSubSeven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLastReadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_medium"
                        android:maxLines="1"
                        android:text="@string/tvLastReadingText"
                        android:textColor="@color/gray_brown"
                        android:textSize="@dimen/text_size_12sp" />

                    <TextView
                        android:id="@+id/tvLastReading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/manrope_bold"
                        android:maxLines="1"
                        android:text="@string/tvLastReading"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/ivUploadCloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_upload_cloud"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearMainOne" />

            <TextView
                android:id="@+id/tvUploadDocumentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="2"
                android:text="@string/tvUploadDocumentsText"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13sp"
                app:layout_constraintBottom_toBottomOf="@id/ivUploadCloud"
                app:layout_constraintStart_toEndOf="@id/ivUploadCloud"
                app:layout_constraintTop_toTopOf="@id/ivUploadCloud" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttachFile"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnAttachFile"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/green_light_1"
                app:cornerRadius="@dimen/radius_22dp"
                app:layout_constraintBottom_toBottomOf="@id/tvUploadDocumentsText"
                app:layout_constraintStart_toEndOf="@id/tvUploadDocumentsText"
                app:layout_constraintTop_toTopOf="@id/tvUploadDocumentsText"
                app:strokeColor="@color/green_light_1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAttachFileLists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUploadDocumentsText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnUpload"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/green_light_1"
                app:cornerRadius="@dimen/radius_6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvAttachFileLists"
                app:strokeColor="@color/green_light_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayNow"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnPayNow"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/green_light_1"
                app:cornerRadius="@dimen/radius_6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnCancelBooking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnUpload"
                app:strokeColor="@color/green_light_1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelBooking"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_marginBottom="@dimen/margin_30dp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:fontFamily="@font/manrope_bold"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/btnCancelBooking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp"
                app:backgroundTint="@color/gray_32"
                app:cornerRadius="@dimen/radius_6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btnPayNow"
                app:layout_constraintTop_toBottomOf="@id/btnUpload"
                app:strokeColor="@color/green_light_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/includeNoInternetBookedViewDetails"
            layout="@layout/layout_no_network"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearNoDataFoundBookedViewDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/includeNoPropertyFound"
                layout="@layout/layout_no_data_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>