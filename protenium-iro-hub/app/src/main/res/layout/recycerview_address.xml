<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/color_accent_grey_light_new2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/rvAddressTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/_653_nostrand_ave_brooklyn_ny_11216"
            android:textColor="@color/light_black1"
            android:textSize="@dimen/text_size_14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:layout_weight=".8"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rvAddressRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_25dp"
                android:layout_gravity="end|center"
                android:gravity="end|center"
                android:text="@string/title_nill" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:layout_marginTop="@dimen/margin_10dp"
                android:gravity="end|center"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5dp">

                <ImageView
                    android:id="@+id/rvAddressDeleteBtn"
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_15dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/rvAddressEditBtn"
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="@dimen/margin_20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_10dp"
                    android:layout_marginEnd="@dimen/margin_15dp"
                    android:src="@drawable/ic_edit"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>